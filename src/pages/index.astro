---
// src/pages/index.astro
import HomeLayout from '../layouts/HomeLayout.astro';
import type { 
  RestaurantRating, 
  RestaurantRatingCreate, 
  RestaurantRatingUpdate,
  RestaurantRatingStats,
  RestaurantRatingsResponse,
  RestaurantSearchFilters,
  RestaurantSearchResponse,
  RestaurantRanking,
  FeaturedRestaurantsResponse 
} from '../interfaces/restaurantRating';
import { mockRestaurants } from '../data/mockData';

// Obtener datos para mostrar
const featuredRestaurants = Object.values(mockRestaurants).slice(0, 3);

// Datos mock para platillos populares (esto después vendría de la API)
const topRatedDishes = [
  {
    id: 1,
    name: "Pasta Carbonara Artesanal",
    restaurant: "La Bella Vita",
    rating: 4.9,
    image: "/images/restaurants/labellavita/cover.webp",
    price: 285,
    reviews: 127
  },
  {
    id: 2,
    name: "Tacos de Cochinita Pibil",
    restaurant: "Tacos El Rey",
    rating: 4.8,
    image: "/images/restaurants/tacoselrey/cover.webp", 
    price: 85,
    reviews: 245
  },
  {
    id: 3,
    name: "Sashimi Premium Selection",
    restaurant: "Sushi Zen",
    rating: 4.9,
    image: "/images/restaurants/sushizen/cover.webp",
    price: 450,
    reviews: 89
  }
];

let topRestaurants: RestaurantRanking[] = [];
let error: string | null = null;

// Stats para mostrar
const stats = [
  { number: "50+", label: "Restaurantes Exclusivos" },
  { number: "2.5K+", label: "Platillos Únicos" },
  { number: "15K+", label: "Reseñas Verificadas" },
  { number: "98%", label: "Satisfacción Cliente" }
];
---

<HomeLayout>
  <!-- Hero Section -->
  <section class="hero-section" id="inicio">
    <div class="hero-background">
      <div class="hero-gradient"></div>
      <div class="floating-elements">
        <div class="floating-element element-1"></div>
        <div class="floating-element element-2"></div>
        <div class="floating-element element-3"></div>
      </div>
    </div>
    
    <div class="hero-content">
      <div class="container">
        <div class="hero-text animate-on-scroll">
          <div class="hero-badge">
            <span class="badge-icon">✨</span>
            <span>Menús Digitales Exclusivos</span>
          </div>
          
          <h1 class="hero-title">
            <span class="title-main">MENU</span><span class="title-accent">UPP</span>
            <span class="title-subtitle">Transforma tu restaurante</span>
          </h1>
          
          <p class="hero-description">
            Crea experiencias gastronómicas digitales extraordinarias con nuestros menús interactivos, 
            sistemas de valoración avanzados y analytics en tiempo real para restaurantes exitosos.
          </p>
          
          <div class="hero-actions">
            <a href="#contacto" class="btn btn-primary">
              <span>Crear Mi Menú</span>
              <i class="fas fa-arrow-right"></i>
            </a>
            <a href="#restaurantes" class="btn btn-secondary">
              <span>Ver Restaurantes</span>
              <i class="fas fa-utensils"></i>
            </a>
          </div>
        </div>
        
        <div class="hero-visual animate-on-scroll">
          <div class="phone-mockup">
            <div class="phone-screen">
              <div class="screen-content">
                <div class="demo-header">
                  <div class="demo-avatar"></div>
                  <div class="demo-title">La Bella Vita</div>
                </div>
                <div class="demo-menu">
                  <div class="demo-item">
                    <div class="demo-img"></div>
                    <div class="demo-text">
                      <div class="demo-name"></div>
                      <div class="demo-stars">⭐⭐⭐⭐⭐</div>
                    </div>
                  </div>
                  <div class="demo-item">
                    <div class="demo-img"></div>
                    <div class="demo-text">
                      <div class="demo-name"></div>
                      <div class="demo-stars">⭐⭐⭐⭐⭐</div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Stats Section -->
  <section class="stats-section animate-on-scroll">
    <div class="container">
      <div class="stats-grid">
        {stats.map((stat, index) => (
          <div class="stat-item" style={`--delay: ${index * 0.1}s`}>
            <div class="stat-number">{stat.number}</div>
            <div class="stat-label">{stat.label}</div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Featured Restaurants Section -->
  <section class="restaurants-section" id="restaurantes">
    <div class="container">
      <div class="section-header animate-on-scroll">
        <div class="section-badge">
          <i class="fas fa-crown"></i>
          <span>Restaurantes Destacados</span>
        </div>
        <h2 class="section-title">Experiencias Gastronómicas <span class="text-orange">Exclusivas</span></h2>
        <p class="section-description">
          Descubre restaurantes únicos que han transformado su presencia digital con MenuUpp
        </p>
      </div>
      
      <div class="restaurants-grid animate-on-scroll">
        {featuredRestaurants.map((data, index) => (
          <div class="restaurant-card" style={`--delay: ${index * 0.15}s`}>
            <div class="card-image">
              <img src={data.restaurant.imageCover || '/images/default-restaurant.webp'} 
                   alt={data.restaurant.name} 
                   loading="lazy" />
              <div class="card-overlay">
                <a href={`/${data.restaurant.username}`} class="visit-btn">
                  <span>Visitar Menú</span>
                  <i class="fas fa-arrow-right"></i>
                </a>
              </div>
              <div class="premium-badge">Premium</div>
            </div>
            <div class="card-content">
              <div class="card-header">
                <h3 class="card-title">{data.restaurant.name}</h3>
                <div class="card-rating">
                  <span class="rating-stars">⭐⭐⭐⭐⭐</span>
                  <span class="rating-text">4.9</span>
                </div>
              </div>
              <p class="card-description">{data.restaurant.description}</p>
              <div class="card-tags">
                {data.restaurant.cuisineType?.map(cuisine => (
                  <span class="tag">{cuisine}</span>
                ))}
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Top Dishes Section -->
  <section class="dishes-section" id="platillos">
    <div class="container">
      <div class="section-header animate-on-scroll">
        <div class="section-badge">
          <i class="fas fa-fire"></i>
          <span>Platillos Populares</span>
        </div>
        <h2 class="section-title">Los Más <span class="text-orange">Valorados</span></h2>
        <p class="section-description">
          Descubre los platillos que han conquistado el paladar de nuestros usuarios
        </p>
      </div>
      
      <div class="dishes-grid animate-on-scroll">
        {topRatedDishes.map((dish, index) => (
          <div class="dish-card" style={`--delay: ${index * 0.1}s`}>
            <div class="dish-image">
              <img src={dish.image} alt={dish.name} loading="lazy" />
              <div class="dish-rating">
                <span class="rating-number">{dish.rating}</span>
                <i class="fas fa-star"></i>
              </div>
            </div>
            <div class="dish-content">
              <div class="dish-restaurant">{dish.restaurant}</div>
              <h3 class="dish-name">{dish.name}</h3>
              <div class="dish-footer">
                <div class="dish-price">${dish.price}</div>
                <div class="dish-reviews">{dish.reviews} reseñas</div>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Search Section -->
  <section class="search-section" id="explorar">
    <div class="container">
      <div class="search-content animate-on-scroll">
        <div class="search-header">
          <h2 class="search-title">Encuentra tu <span class="text-orange">Próxima Experiencia</span></h2>
          <p class="search-description">
            Explora nuestra colección curada de restaurantes excepcionales
          </p>
        </div>
        
        <div class="search-box">
          <div class="search-input-container">
            <i class="fas fa-search search-icon"></i>
            <input type="text" placeholder="Buscar restaurante, tipo de comida..." class="search-input" />
            <button class="search-btn">
              <span>Buscar</span>
            </button>
          </div>
          
          <div class="search-filters">
            <button class="filter-btn active">Todos</button>
            <button class="filter-btn">Italiana</button>
            <button class="filter-btn">Mexicana</button>
            <button class="filter-btn">Japonesa</button>
            <button class="filter-btn">Premium</button>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Contact Section -->
  <section class="contact-section" id="contacto">
    <div class="container">
      <div class="contact-content">
        <div class="contact-info animate-on-scroll">
          <div class="section-badge">
            <i class="fas fa-rocket"></i>
            <span>¡Tu Momento es Ahora!</span>
          </div>
          
          <h2 class="contact-title">Transforma tu Restaurante con <span class="text-orange">MenuUpp</span></h2>
          
          <p class="contact-description">
            Únete a la revolución digital gastronómica. Creamos experiencias de menú 
            exclusivas que potencian tu marca y encantan a tus clientes.
          </p>
          
          <div class="contact-features">
            <div class="feature-item">
              <i class="fas fa-check-circle"></i>
              <span>Diseño 100% personalizado</span>
            </div>
            <div class="feature-item">
              <i class="fas fa-check-circle"></i>
              <span>Analytics avanzados incluidos</span>
            </div>
            <div class="feature-item">
              <i class="fas fa-check-circle"></i>
              <span>Soporte dedicado 24/7</span>
            </div>
            <div class="feature-item">
              <i class="fas fa-check-circle"></i>
              <span>Implementación en 48 horas</span>
            </div>
          </div>
          
          <div class="contact-methods">
            <a href="mailto:hola@menuupp.com" class="contact-btn primary">
              <i class="fas fa-envelope"></i>
              <span>hola@menuupp.com</span>
            </a>
            <a href="https://wa.me/5551234567" class="contact-btn secondary">
              <i class="fab fa-whatsapp"></i>
              <span>WhatsApp</span>
            </a>
          </div>
        </div>
        
        <div class="contact-form animate-on-scroll">
          <form class="form">
            <div class="form-header">
              <h3>Solicita tu Demostración</h3>
              <p>Te contactamos en menos de 24 horas</p>
            </div>
            
            <div class="form-group">
              <label for="name">Nombre del Restaurante</label>
              <input type="text" id="name" name="name" required />
            </div>
            
            <div class="form-group">
              <label for="email">Email de Contacto</label>
              <input type="email" id="email" name="email" required />
            </div>
            
            <div class="form-group">
              <label for="phone">Teléfono</label>
              <input type="tel" id="phone" name="phone" required />
            </div>
            
            <div class="form-group">
              <label for="message">Cuéntanos sobre tu restaurante</label>
              <textarea id="message" name="message" rows="4" 
                placeholder="Tipo de cocina, ubicación, objetivos..."></textarea>
            </div>
            
            <button type="submit" class="submit-btn">
              <span>Solicitar Demostración</span>
              <i class="fas fa-paper-plane"></i>
            </button>
          </form>
        </div>
      </div>
    </div>
  </section>

  <!-- Footer -->
  <footer class="footer-section">
    <div class="container">
      <div class="footer-content">
        <div class="footer-brand">
          <div class="brand-logo">
            <span class="brand-name">MENU<span class="brand-accent">UPP</span></span>
          </div>
          <p class="brand-description">
            Creando experiencias gastronómicas digitales extraordinarias
          </p>
          <div class="social-links">
            <a href="#" class="social-link"><i class="fab fa-instagram"></i></a>
            <a href="#" class="social-link"><i class="fab fa-linkedin"></i></a>
            <a href="#" class="social-link"><i class="fab fa-twitter"></i></a>
          </div>
        </div>
        
        <div class="footer-links">
          <div class="link-column">
            <h4>Producto</h4>
            <a href="#restaurantes">Restaurantes</a>
            <a href="#platillos">Platillos</a>
            <a href="#explorar">Explorar</a>
          </div>
          <div class="link-column">
            <h4>Empresa</h4>
            <a href="#contacto">Contacto</a>
            <a href="#">Nosotros</a>
            <a href="#">Blog</a>
          </div>
          <div class="link-column">
            <h4>Legal</h4>
            <a href="#">Privacidad</a>
            <a href="#">Términos</a>
            <a href="#">Cookies</a>
          </div>
        </div>
      </div>
      
      <div class="footer-bottom">
        <p>&copy; 2025 MenuUpp. Todos los derechos reservados.</p>
      </div>
    </div>
  </footer>

  <!-- Floating CTA Button -->
  <div class="floating-cta">
    <a href="#contacto" class="cta-button">
      <div class="cta-content">
        <span class="cta-text">¡Crea tu menú ahora!</span>
        <i class="fas fa-rocket cta-icon"></i>
      </div>
      <div class="cta-glow"></div>
    </a>
  </div>
</HomeLayout>

<style>
  /* ==========================================
     HERO SECTION
     ========================================== */
  .hero-section {
    min-height: 100vh;
    position: relative;
    display: flex;
    align-items: center;
    overflow: hidden;
    background: var(--gradient-dark);
  }
  
  .hero-background {
    position: absolute;
    inset: 0;
    z-index: 1;
  }
  
  .hero-gradient {
    position: absolute;
    inset: 0;
    background: radial-gradient(circle at 30% 20%, rgba(255, 107, 0, 0.1) 0%, transparent 50%),
                radial-gradient(circle at 80% 80%, rgba(255, 159, 80, 0.1) 0%, transparent 50%);
  }
  
  .floating-elements {
    position: absolute;
    inset: 0;
    pointer-events: none;
  }
  
  .floating-element {
    position: absolute;
    border-radius: 50%;
    background: rgba(255, 107, 0, 0.1);
    backdrop-filter: blur(20px);
  }
  
  .element-1 {
    top: 20%;
    left: 10%;
    width: 120px;
    height: 120px;
    animation: float 8s ease-in-out infinite;
  }
  
  .element-2 {
    top: 60%;
    right: 15%;
    width: 80px;
    height: 80px;
    animation: float 10s ease-in-out infinite reverse;
  }
  
  .element-3 {
    bottom: 20%;
    left: 60%;
    width: 60px;
    height: 60px;
    animation: float 12s ease-in-out infinite;
  }
  
  @keyframes float {
    0%, 100% { transform: translateY(0) rotate(0deg); }
    50% { transform: translateY(-20px) rotate(180deg); }
  }
  
  .hero-content {
    position: relative;
    z-index: 10;
    width: 100%;
    padding: var(--space-4xl) 0;
  }
  
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 var(--space-lg);
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-4xl);
    align-items: center;
  }
  
  .hero-badge {
    display: inline-flex;
    align-items: center;
    gap: var(--space-sm);
    padding: var(--space-sm) var(--space-lg);
    background: rgba(255, 107, 0, 0.1);
    border: 1px solid rgba(255, 107, 0, 0.3);
    border-radius: var(--radius-full);
    color: var(--accent-orange);
    font-size: 0.875rem;
    font-weight: 500;
    margin-bottom: var(--space-xl);
    backdrop-filter: blur(10px);
  }
  
  .badge-icon {
    animation: sparkle 2s ease-in-out infinite;
  }
  
  @keyframes sparkle {
    0%, 100% { transform: scale(1) rotate(0deg); }
    50% { transform: scale(1.2) rotate(180deg); }
  }
  
  .hero-title {
    font-family: var(--font-primary);
    font-size: clamp(3rem, 8vw, 4.5rem);
    font-weight: 900;
    line-height: 1.1;
    margin-bottom: var(--space-xl);
    color: var(--pure-white);
  }
  
  .title-main {
    display: block;
  }
  
  .title-accent {
    background: var(--gradient-primary);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }
  
  .title-subtitle {
    display: block;
    font-size: clamp(1.2rem, 3vw, 1.8rem);
    font-weight: 400;
    color: var(--neutral-light);
    margin-top: var(--space-sm);
  }
  
  .hero-description {
    font-size: 1.2rem;
    line-height: 1.6;
    color: var(--neutral-light);
    margin-bottom: var(--space-2xl);
    max-width: 90%;
  }
  
  .hero-actions {
    display: flex;
    gap: var(--space-lg);
    flex-wrap: wrap;
  }
  
  .btn {
    display: inline-flex;
    align-items: center;
    gap: var(--space-sm);
    padding: var(--space-lg) var(--space-xl);
    border-radius: var(--radius-full);
    font-weight: 600;
    font-size: 1.1rem;
    text-decoration: none;
    transition: all var(--transition-normal);
    position: relative;
    overflow: hidden;
  }
  
  .btn::before {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(45deg, transparent 30%, rgba(255, 255, 255, 0.1) 50%, transparent 70%);
    transform: translateX(-100%);
    transition: transform 0.6s ease;
  }
  
  .btn:hover::before {
    transform: translateX(100%);
  }
  
  .btn-primary {
    background: var(--gradient-primary);
    color: var(--pure-white);
    box-shadow: var(--shadow-glow);
  }
  
  .btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 40px rgba(255, 107, 0, 0.4);
  }
  
  .btn-secondary {
    background: rgba(255, 255, 255, 0.1);
    color: var(--pure-white);
    border: 1px solid rgba(255, 255, 255, 0.3);
    backdrop-filter: blur(10px);
  }
  
  .btn-secondary:hover {
    background: rgba(255, 255, 255, 0.2);
    transform: translateY(-2px);
  }
  
  /* Phone Mockup */
  .phone-mockup {
    position: relative;
    width: 280px;
    height: 580px;
    margin: 0 auto;
    background: linear-gradient(145deg, #2a2a2a, #1a1a1a);
    border-radius: 40px;
    padding: 20px;
    box-shadow: 
      0 0 0 8px rgba(255, 107, 0, 0.1),
      0 30px 60px rgba(0, 0, 0, 0.3);
    animation: phoneFloat 6s ease-in-out infinite;
  }
  
  @keyframes phoneFloat {
    0%, 100% { transform: translateY(0) rotateY(0deg); }
    50% { transform: translateY(-20px) rotateY(5deg); }
  }
  
  .phone-screen {
    width: 100%;
    height: 100%;
    background: var(--pure-white);
    border-radius: 30px;
    overflow: hidden;
    position: relative;
  }
  
  .screen-content {
    padding: var(--space-lg);
    animation: screenContent 8s ease-in-out infinite;
  }
  
  @keyframes screenContent {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.8; }
  }
  
  .demo-header {
    display: flex;
    align-items: center;
    gap: var(--space-md);
    margin-bottom: var(--space-lg);
  }
  
  .demo-avatar {
    width: 50px;
    height: 50px;
    background: var(--gradient-primary);
    border-radius: 50%;
  }
  
  .demo-title {
    font-weight: 600;
    color: var(--primary-blue);
  }
  
  .demo-menu {
    display: flex;
    flex-direction: column;
    gap: var(--space-md);
  }
  
  .demo-item {
    display: flex;
    gap: var(--space-md);
    padding: var(--space-md);
    background: var(--neutral-light);
    border-radius: var(--radius-lg);
  }
  
  .demo-img {
    width: 60px;
    height: 60px;
    background: var(--gradient-primary);
    border-radius: var(--radius-md);
  }
  
  .demo-text {
    flex: 1;
  }
  
  .demo-name {
    height: 16px;
    background: var(--secondary-gray);
    border-radius: 4px;
    margin-bottom: var(--space-sm);
  }
  
  .demo-stars {
    font-size: 0.8rem;
  }

  /* ==========================================
     STATS SECTION
     ========================================== */
  .stats-section {
    padding: var(--space-4xl) 0;
    background: var(--pure-white);
  }
  
  .stats-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: var(--space-2xl);
    text-align: center;
  }
  
  .stat-item {
    animation: countUp 1s ease-out forwards;
    animation-delay: var(--delay);
    opacity: 0;
  }
  
  @keyframes countUp {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  .stat-number {
    font-family: var(--font-primary);
    font-size: 3rem;
    font-weight: 900;
    color: var(--primary-orange);
    margin-bottom: var(--space-sm);
  }
  
  .stat-label {
    font-size: 1.1rem;
    color: var(--secondary-gray);
    font-weight: 500;
  }

  /* ==========================================
     SECTION HEADERS
     ========================================== */
  .section-header {
    text-align: center;
    margin-bottom: var(--space-4xl);
  }
  
  .section-badge {
    display: inline-flex;
    align-items: center;
    gap: var(--space-sm);
    padding: var(--space-sm) var(--space-lg);
    background: rgba(255, 107, 0, 0.1);
    border: 1px solid rgba(255, 107, 0, 0.3);
    border-radius: var(--radius-full);
    color: var(--primary-orange);
    font-size: 0.875rem;
    font-weight: 600;
    margin-bottom: var(--space-lg);
  }
  
  .section-title {
    font-family: var(--font-primary);
    font-size: clamp(2rem, 5vw, 3rem);
    font-weight: 800;
    line-height: 1.2;
    color: var(--primary-blue);
    margin-bottom: var(--space-lg);
  }
  
  .section-description {
    font-size: 1.2rem;
    color: var(--secondary-gray);
    max-width: 600px;
    margin: 0 auto;
    line-height: 1.6;
  }

  /* ==========================================
     RESTAURANTS SECTION
     ========================================== */
  .restaurants-section {
    padding: var(--space-4xl) 0;
    background: var(--neutral-light);
  }
  
  .restaurants-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: var(--space-2xl);
  }
  
