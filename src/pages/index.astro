---
import HeaderIndex from '../components/HomeSections/HeaderIndex.astro';
import HeroIndex from '../components/HomeSections/HeroIndex.astro';
import Features from '../components/HomeSections/Features.astro';
import DemoSection from '../components/HomeSections/DemoSection.astro';
import ExtraSection from '../components/HomeSections/ExtraSection.astro';
import CtaSection from '../components/HomeSections/CtaSection.astro';
import Footer from '../components/HomeSections/Footer.astro';
import HelpFloatingButton from '../components/HelpFloatingButton.astro';
import LayoutIndex from '../layouts/LayoutIndex.astro';
---

<LayoutIndex title="Menu-Upp | Digitaliza el menú de tu restaurante">
  <HeaderIndex />
  
  <!-- Hero Section con scroll suave -->
  <main class="main-content">
    <HeroIndex />
    
    <!-- Features con mejor espaciado -->
    <section class="section-wrapper features-section">
      <Features />
    </section>
    
    <!-- Demo con transición suave -->
    <section class="section-wrapper demo-section">
      <DemoSection />
    </section>
    
    <!-- Extra con mejor contraste -->
    <section class="section-wrapper extra-section">
      <ExtraSection />
    </section>
    
    <!-- CTA con mayor impacto -->
    <section class="section-wrapper cta-section">
      <CtaSection />
    </section>
  </main>
  
  <Footer />
  <HelpFloatingButton />
</LayoutIndex>

<style>
  /* Estilos globales para la página principal */
  .main-content {
    position: relative;
    overflow-x: hidden;
  }
  
  /* Wrapper para secciones con espaciado consistente */
  .section-wrapper {
    position: relative;
    width: 100%;
  }
  
  /* Secciones específicas con mejor contraste y espaciado */
  .features-section {
    background: linear-gradient(135deg, var(--bg-secondary) 0%, var(--bg-primary) 100%);
    padding: var(--spacing-5xl) 0;
  }
  
  .demo-section {
    background: var(--bg-primary);
    padding: var(--spacing-5xl) 0;
  }
  
  .extra-section {
    background: linear-gradient(135deg, var(--bg-tertiary) 0%, var(--bg-secondary) 100%);
    padding: var(--spacing-5xl) 0;
  }
  
  .cta-section {
    background: var(--primary-gradient);
    padding: var(--spacing-5xl) 0;
    position: relative;
    overflow: hidden;
  }
  
  /* Efectos de fondo para mayor profundidad */
  .cta-section::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: url("data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Cg fill='%23ffffff' fill-opacity='0.05'%3E%3Ccircle cx='30' cy='30' r='2'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E");
    opacity: 0.3;
  }
  
  /* Responsive mejorado */
  @media (max-width: 768px) {
    .features-section,
    .demo-section,
    .extra-section,
    .cta-section {
      padding: var(--spacing-4xl) 0;
    }
  }
  
  @media (max-width: 576px) {
    .features-section,
    .demo-section,
    .extra-section,
    .cta-section {
      padding: var(--spacing-3xl) 0;
    }
  }
  
  /* Optimizaciones de rendimiento */
  .section-wrapper {
    will-change: transform;
  }
  
  /* Scroll suave entre secciones */
  html {
    scroll-behavior: smooth;
  }
  
  /* Mejoras de accesibilidad */
  @media (prefers-reduced-motion: reduce) {
    html {
      scroll-behavior: auto;
    }
    
    .section-wrapper {
      will-change: auto;
    }
  }
</style>