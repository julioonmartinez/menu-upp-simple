---
import PrivateLayout from '../layouts/PrivateLayout.astro';
import FeedbackForm from '../components/FeedbackForm.svelte';

export const prerender = false;
---

<PrivateLayout 
  title="Feedback - MenuUpp"
  description="Comparte tu opinión y sugerencias para mejorar MenuUpp"
  showHeaderShadow={true}
>
  <div class="feedback-container">
    <div class="feedback-header">
      <h1 class="feedback-title">Feedback</h1>
      <p class="feedback-subtitle">Tu opinión nos ayuda a mejorar MenuUpp</p>
    </div>
    
    <FeedbackForm client:load />
  </div>
</PrivateLayout>

<style>
  .feedback-container {
    max-width: 800px;
    margin: 0 auto;
    padding: var(--spacing-2xl);
  }

  .feedback-header {
    text-align: center;
    margin-bottom: var(--spacing-3xl);
  }

  .feedback-title {
    font-size: var(--font-4xl);
    font-weight: var(--weight-bold);
    color: var(--text-primary);
    margin: 0 0 var(--spacing-md) 0;
  }

  .feedback-subtitle {
    font-size: var(--font-lg);
    color: var(--text-muted);
    margin: 0;
  }

  @media (max-width: 768px) {
    .feedback-container {
      padding: var(--spacing-lg);
    }

    .feedback-title {
      font-size: var(--font-3xl);
    }
  }
</style> 