    <path d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z"></path>
  </svg>`,
  default: `<svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
    <path d="M10 13a5 5 0 0 0 7.54.54l3-3a5 5 0 0 0-7.07-7.07l-1.72 1.72"></path>
    <path d="M14 11a5 5 0 0 0-7.54-.54l-3 3a5 5 0 0 0 7.07 7.07l1.72-1.72"></path>
  </svg>`
};

const getIcon = (iconKey?: string) => {
  return icons[iconKey as keyof typeof icons] || icons.default;
};
---

<a 
  href={link.url}
  class="link-card"
  target={link.url.startsWith('http') ? '_blank' : '_self'}
  rel={link.url.startsWith('http') ? 'noopener noreferrer' : ''}
  style={theme ? `--link-bg: ${link.customColor == '' ? '#ffff' : link.customColor }; --link-text: ${theme.textColor}` : ''}
>
  <div class="link-content">
    <div class="link-icon" set:html={getIcon(link.icon)} />
    <div class="link-text">
      <h3 class="link-title">{link.title}</h3>
      {link.description && <p class="link-description">{link.description}</p>}
    </div>
  </div>
  <div class="link-arrow">
    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
      <polyline points="9,18 15,12 9,6"></polyline>
    </svg>
  </div>
</a>

<style>
  .link-card {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 1rem 1.25rem;
    background-color: var(--link-bg, #FFFFFF);
    color: var(--link-text, #2C2C2C);
    border-radius: 16px;
    text-decoration: none;
    transition: all 0.3s ease;
    box-shadow: 0 2px 8px rgba(0,0,0,0.08);
    border: 1px solid rgba(0,0,0,0.05);
    position: relative;
    overflow: hidden;
  }
  
  .link-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255,255,255,0.3), transparent);
    transition: left 0.5s ease;
  }
  
  .link-card:hover::before {
    left: 100%;
  }
  
  .link-card:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(0,0,0,0.15);
  }
  
  .link-content {
    display: flex;
    align-items: center;
    flex: 1;
    gap: 1rem;
  }
  
  .link-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 44px;
    height: 44px;
    border-radius: 12px;
    background-color: rgba(255,69,0,0.1);
    color: #FF4500;
    flex-shrink: 0;
  }
  
  .link-text {
    flex: 1;
    min-width: 0;
  }
  
  .link-title {
    font-size: 1rem;
    font-weight: 600;
    margin: 0 0 0.25rem 0;
    line-height: 1.3;
  }
  
  .link-description {
    font-size: 0.875rem;
    color: var(--link-text-secondary, #666);
    margin: 0;
    line-height: 1.3;
  }
  
  .link-arrow {
    color: #FF4500;
    transition: transform 0.3s ease;
    flex-shrink: 0;
  }
  
  .link-card:hover .link-arrow {
    transform: translateX(4px);
  }
  
  @media (max-width: 480px) {
    .link-card {
      padding: 0.875rem 1rem;
    }
    
    .link-icon {
      width: 40px;
      height: 40px;
    }
    
    .link-title {
      font-size: 0.9rem;
    }
    
    .link-description {
      font-size: 0.8rem;
    }
  }
</style>
