---
import type { Link } from '../interfaces';
import { getIconClass } from '../utils/iconUtils.ts';

interface Props {
  link: Link;
  theme?: {
    backgroundColor?: string;
    textColor?: string;
  };
  username: string;
  primaryColor?: string
}

const { link, theme, username, primaryColor = '#FF4500' } = Astro.props;

// Funci贸n para calcular el contraste y determinar el color del texto
const calculateTextColor = (backgroundColor: string): { main: string; secondary: string } => {
  // Funci贸n auxiliar para convertir hex a RGB
  const hexToRgb = (hex: string) => {
    const result = /^#?([a-f\d]{2})([a-f\d]{2})([a-f\d]{2})$/i.exec(hex);
    return result ? {
      r: parseInt(result[1], 16),
      g: parseInt(result[2], 16),
      b: parseInt(result[3], 16)
    } : null;
  };

  // Funci贸n para calcular la luminancia relativa
  const getLuminance = (r: number, g: number, b: number) => {
    const [rs, gs, bs] = [r, g, b].map(c => {
      c = c / 255;
      return c <= 0.03928 ? c / 12.92 : Math.pow((c + 0.055) / 1.055, 2.4);
    });
    return 0.2126 * rs + 0.7152 * gs + 0.0722 * bs;
  };

  // Obtener el color de fondo
  const bgColor = backgroundColor || '#FFFFFF';
  const rgb = hexToRgb(bgColor);
  
  if (!rgb) {
    // Fallback si no se puede parsear el color
    return { main: '#2C2C2C', secondary: '#666666' };
  }

  // Calcular luminancia del color de fondo
  const luminance = getLuminance(rgb.r, rgb.g, rgb.b);
  
  // Si la luminancia es alta (color claro), usar texto oscuro
  // Si la luminancia es baja (color oscuro), usar texto claro
  if (luminance > 0.5) {
    return {
      main: '#2C2C2C',
      secondary: '#666666'
    };
  } else {
    return {
      main: '#FFFFFF',
      secondary: '#E0E0E0'
    };
  }
};

// L贸gica de colores para el icono
const getIconColors = () => {
  // 1. Si el link tiene customColor y no est谩 vac铆o, usarlo
  if (link.customColor && link.customColor.trim() !== '') {
    return {
      backgroundColor: `${link.customColor}20`, // 20 = 12.5% opacity
      color: link.customColor
    };
  }
  
  // 2. Si no hay customColor, usar colores del tema o defaults
  const primaryColor = theme?.backgroundColor || '#FF4500';
  return {
    backgroundColor: `${primaryColor}20`,
    color: primaryColor
  };
};

const iconColors = getIconColors();
const iconClass = getIconClass(link.icon);

// Calcular colores de texto basados en el color de fondo
const backgroundColor = link.customColor || theme?.backgroundColor || '#FFFFFF';
const textColors = calculateTextColor(backgroundColor);

// Debug mejorado para desarrollo
if (import.meta.env.DEV) {
  console.log(' Link icon debug:', {
    originalIcon: link.icon,
    cleanedIcon: link.icon?.trim().toLowerCase(),
    finalIconClass: iconClass,
    customColor: link.customColor,
    finalColors: iconColors,
    linkTitle: link.title,
    backgroundColor: backgroundColor,
    textColors: textColors
  });
  
  // Verificar si el icono es v谩lido
  if (iconClass === 'fa-solid fa-link' && link.icon && link.icon !== 'link') {
    console.warn('锔 Icon fallback used for:', link.icon, 'in link:', link.title);
  }
}
---

<a 
  href={ link.type == 'menu' ? `${username}/menu` : link.url  }
  class="link-card"
  target={link.type == 'menu' ? '_self' : (link.url.startsWith('http') ? '_blank' : '_self') }
  rel={link.url.startsWith('http') ? 'noopener noreferrer' : ''}
  style={`--link-bg: ${backgroundColor}; --link-text: ${textColors.main}; --link-text-secondary: ${textColors.secondary};`}
>
  <div class="link-content">
    <div 
      class="link-icon"
      style={` color: ${textColors.main};`}
    >
      <i class={iconClass} aria-hidden="true"></i>
    </div>
    <div class="link-text">
      <h3 class="link-title">{link.title}</h3>
      {link.description && link.description.trim() !== '' && (
        <p class="link-description">{link.description}</p>
      )}
    </div>
  </div>
  <div class="link-arrow">
    <i class="fa-solid fa-chevron-right" aria-hidden="true"></i>
  </div>
</a>

<style>
  .link-card {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 1rem 1.25rem;
    background-color: var(--link-bg, #FFFFFF);
    color: var(--link-text, #2C2C2C);
    border-radius: 0.75rem;
    text-decoration: none;
    transition: all 0.3s ease;
    box-shadow: 0 2px 8px rgba(0,0,0,0.08);
    border: 1px solid rgba(0,0,0,0.05);
    position: relative;
    overflow: hidden;
  }
  
  .link-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255,255,255,0.3), transparent);
    transition: left 0.5s ease;
  }
  
  .link-card:hover::before {
    left: 100%;
  }
  
  .link-card:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(0,0,0,0.15);
  }
  
  .link-content {
    display: flex;
    align-items: center;
    flex: 1;
    gap: 1rem;
  }
  
  .link-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 44px;
    height: 44px;
    border-radius: 12px;
    flex-shrink: 0;
    transition: all 0.3s ease;
  }
  
  .link-icon i {
    font-size: 1.25rem;
    transition: transform 0.3s ease;
    /* Asegurar que Font Awesome se renderice correctamente */
    font-family: "Font Awesome 6 Free", "Font Awesome 6 Pro", "Font Awesome 6 Brands", FontAwesome !important;
    font-weight: 900; /* Importante para iconos solid */
    font-style: normal;
    line-height: 1;
  }
  
  /* Estilos espec铆ficos para diferentes tipos de iconos */
  .link-icon i[class*="fa-brands"] {
    font-family: "Font Awesome 6 Brands", FontAwesome !important;
    font-weight: 400;
  }
  
  .link-icon i[class*="fa-regular"] {
    font-family: "Font Awesome 6 Free", FontAwesome !important;
    font-weight: 400;
  }
  
  .link-icon i[class*="fa-light"],
  .link-icon i[class*="fa-thin"] {
    font-family: "Font Awesome 6 Pro", FontAwesome !important;
    font-weight: 300;
  }
  
  .link-card:hover .link-icon {
    transform: scale(1.05);
  }
  
  .link-card:hover .link-icon i {
    transform: scale(1.1);
  }
  
  .link-text {
    flex: 1;
    min-width: 0;
  }
  
  .link-title {
    font-size: 1rem;
    font-weight: 600;
    margin: 0 0 0.25rem 0;
    line-height: 1.3;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    color: var(--link-text, #2C2C2C);
  }
  
  .link-description {
    font-size: 0.875rem;
    color: var(--link-text-secondary, #666);
    margin: 0;
    line-height: 1.3;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    opacity: 0.8;
  }
  
  .link-arrow {
    color: var(--link-text, #2C2C2C);
    opacity: 0.6;
    transition: all 0.3s ease;
    flex-shrink: 0;
  }
  
  .link-arrow i {
    font-size: 0.875rem;
    font-family: "Font Awesome 6 Free", FontAwesome !important;
    font-weight: 900;
  }
  
  .link-card:hover .link-arrow {
    opacity: 1;
    transform: translateX(4px);
  }
  
  @media (max-width: 480px) {
    .link-card {
      padding: 0.875rem 1rem;
    }
    
    .link-icon {
      width: 40px;
      height: 40px;
    }
    
    .link-icon i {
      font-size: 1.125rem;
    }
    
    .link-title {
      font-size: 0.9rem;
    }
    
    .link-description {
      font-size: 0.8rem;
    }
  }
</style>