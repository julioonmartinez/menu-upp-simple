---
import type { Link } from '../interfaces';

interface Props {
  link: Link;
  theme?: {
    backgroundColor?: string;
    textColor?: string;
  };
  username: string;
  primaryColor?: string
}

const { link, theme, username, primaryColor = '#FF4500' } = Astro.props;

// Funci칩n mejorada para convertir iconos del backend a clases de Font Awesome 6
const getIconClass = (iconKey?: string) => {
  if (!iconKey) return 'fa-solid fa-link';
  
  // Limpiar el iconKey de espacios y convertir a min칰sculas
  const cleanIconKey = iconKey.trim().toLowerCase();
  
  // Si ya viene con formato Font Awesome 6 moderno (fa-solid, fa-brands, etc.)
  if (cleanIconKey.startsWith('fa-solid') || cleanIconKey.startsWith('fa-brands') || 
      cleanIconKey.startsWith('fa-regular') || cleanIconKey.startsWith('fa-light')) {
    return cleanIconKey;
  }
  
  // Si viene con formato Font Awesome 5/6 legacy (fas-, fab-, etc.)
  if (cleanIconKey.includes('-')) {
    let result = cleanIconKey;
    
    // Mapeo de prefijos legacy a modernos
    const prefixMap = {
      'fas-': 'fa-solid fa-',
      'fab-': 'fa-brands fa-',
      'far-': 'fa-regular fa-',
      'fal-': 'fa-light fa-',
      'fat-': 'fa-thin fa-',
      'fad-': 'fa-duotone fa-'
    };
    
    // Aplicar el mapeo correspondiente
    for (const [oldPrefix, newPrefix] of Object.entries(prefixMap)) {
      if (result.startsWith(oldPrefix)) {
        result = result.replace(oldPrefix, newPrefix);
        break;
      }
    }
    
    return result;
  }
  
  // Mapeo de iconos espec칤ficos a Font Awesome 6 (para iconos sin prefijo)
  const iconMap: Record<string, string> = {
    // Iconos de men칰 y comida
    'menu': 'fa-solid fa-utensils',
    'utensils': 'fa-solid fa-utensils',
    'food': 'fa-solid fa-burger',
    'hamburger': 'fa-solid fa-burger',
    'cutlery': 'fa-solid fa-utensils', // Fallback para FA4
    
    // Iconos de calendario y eventos
    'calendar': 'fa-solid fa-calendar',
    'event': 'fa-solid fa-star',
    'events': 'fa-solid fa-calendar-days',
    
    // Iconos de delivery y tienda
    'delivery': 'fa-solid fa-truck',
    'store': 'fa-solid fa-bag-shopping',
    'shop': 'fa-solid fa-store',
    'shopping': 'fa-solid fa-cart-shopping',
    
    // Iconos de ubicaci칩n
    'location': 'fa-solid fa-location-dot',
    'location_on': 'fa-solid fa-location-dot',
    'map': 'fa-solid fa-map',
    'pin': 'fa-solid fa-map-pin',
    
    // Iconos de redes sociales
    'instagram': 'fa-brands fa-instagram',
    'facebook': 'fa-brands fa-facebook-f',
    'twitter': 'fa-brands fa-twitter',
    'x': 'fa-brands fa-x-twitter',
    'whatsapp': 'fa-brands fa-whatsapp',
    'tiktok': 'fa-brands fa-tiktok',
    'youtube': 'fa-brands fa-youtube',
    'linkedin': 'fa-brands fa-linkedin',
    'pinterest': 'fa-brands fa-pinterest',
    'snapchat': 'fa-brands fa-snapchat',
    
    // Iconos de contacto
    'phone': 'fa-solid fa-phone',
    'email': 'fa-solid fa-envelope',
    'contact': 'fa-solid fa-address-book',
    'mail': 'fa-solid fa-envelope',
    
    // Iconos de web y enlaces
    'website': 'fa-solid fa-globe',
    'link': 'fa-solid fa-external-link-alt',
    'web': 'fa-solid fa-earth-americas',
    'url': 'fa-solid fa-link',
    
    // Iconos de galer칤a y multimedia
    'gallery': 'fa-solid fa-images',
    'photo': 'fa-solid fa-camera',
    'video': 'fa-solid fa-video',
    'music': 'fa-solid fa-music',
    
    // Iconos de bebidas y especialidades
    'wine': 'fa-solid fa-wine-glass',
    'drink': 'fa-solid fa-champagne-glasses',
    'coffee': 'fa-solid fa-mug-saucer',
    'beer': 'fa-solid fa-beer-mug-empty',
    
    // Iconos adicionales
    'info': 'fa-solid fa-circle-info',
    'about': 'fa-solid fa-circle-user',
    'news': 'fa-solid fa-newspaper',
    'blog': 'fa-solid fa-blog',
    'download': 'fa-solid fa-download',
    'upload': 'fa-solid fa-upload',
    'search': 'fa-solid fa-magnifying-glass',
    'home': 'fa-solid fa-house',
    'user': 'fa-solid fa-user',
    'users': 'fa-solid fa-users',
    'heart': 'fa-solid fa-heart',
    'star': 'fa-solid fa-star',
    'settings': 'fa-solid fa-gear',
    'config': 'fa-solid fa-gear'
  };
  
  return iconMap[cleanIconKey] || 'fa-solid fa-link';
};

// L칩gica de colores para el icono
const getIconColors = () => {
  // 1. Si el link tiene customColor y no est치 vac칤o, usarlo
  if (link.customColor && link.customColor.trim() !== '') {
    return {
      backgroundColor: `${link.customColor}20`, // 20 = 12.5% opacity
      color: link.customColor
    };
  }
  
  // 2. Si no hay customColor, usar colores del tema o defaults
  const primaryColor = theme?.backgroundColor || '#FF4500';
  return {
    backgroundColor: `${primaryColor}20`,
    color: primaryColor
  };
};

const iconColors = getIconColors();
const iconClass = getIconClass(link.icon);

// Debug mejorado para desarrollo
if (import.meta.env.DEV) {
  console.log('游댌 Link icon debug:', {
    originalIcon: link.icon,
    cleanedIcon: link.icon?.trim().toLowerCase(),
    finalIconClass: iconClass,
    customColor: link.customColor,
    finalColors: iconColors,
    linkTitle: link.title
  });
  
  // Verificar si el icono es v치lido
  if (iconClass === 'fa-solid fa-link' && link.icon && link.icon !== 'link') {
    console.warn('丘멆잺 Icon fallback used for:', link.icon, 'in link:', link.title);
  }
}
---

<a 
  href={ link.type == 'menu' ? `${username}/menu` : link.url  }
  class="link-card"
  target={link.url.startsWith('http') ? '_blank' : '_self'}
  rel={link.url.startsWith('http') ? 'noopener noreferrer' : ''}
  style={theme ? `--link-bg: ${theme.backgroundColor || '#FFFFFF'}; --link-text: ${theme.textColor || '#2C2C2C'}` : ''}
>
  <div class="link-content">
    <div 
      class="link-icon"
      style={` color: ${primaryColor};`}
    >
      <i class={iconClass} aria-hidden="true"></i>
    </div>
    <div class="link-text">
      <h3 class="link-title">{link.title}</h3>
      {link.description && link.description.trim() !== '' && (
        <p class="link-description">{link.description}</p>
      )}
    </div>
  </div>
  <div class="link-arrow">
    <i class="fa-solid fa-chevron-right" aria-hidden="true"></i>
  </div>
</a>

<style>
  .link-card {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 1rem 1.25rem;
    background-color: var(--link-bg, #FFFFFF);
    color: var(--link-text, #2C2C2C);
    border-radius: 0.75rem;
    text-decoration: none;
    transition: all 0.3s ease;
    box-shadow: 0 2px 8px rgba(0,0,0,0.08);
    border: 1px solid rgba(0,0,0,0.05);
    position: relative;
    overflow: hidden;
  }
  
  .link-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255,255,255,0.3), transparent);
    transition: left 0.5s ease;
  }
  
  .link-card:hover::before {
    left: 100%;
  }
  
  .link-card:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(0,0,0,0.15);
  }
  
  .link-content {
    display: flex;
    align-items: center;
    flex: 1;
    gap: 1rem;
  }
  
  .link-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 44px;
    height: 44px;
    border-radius: 12px;
    flex-shrink: 0;
    transition: all 0.3s ease;
  }
  
  .link-icon i {
    font-size: 1.25rem;
    transition: transform 0.3s ease;
    /* Asegurar que Font Awesome se renderice correctamente */
    font-family: "Font Awesome 6 Free", "Font Awesome 6 Pro", "Font Awesome 6 Brands", FontAwesome !important;
    font-weight: 900; /* Importante para iconos solid */
    font-style: normal;
    line-height: 1;
  }
  
  /* Estilos espec칤ficos para diferentes tipos de iconos */
  .link-icon i[class*="fa-brands"] {
    font-family: "Font Awesome 6 Brands", FontAwesome !important;
    font-weight: 400;
  }
  
  .link-icon i[class*="fa-regular"] {
    font-family: "Font Awesome 6 Free", FontAwesome !important;
    font-weight: 400;
  }
  
  .link-icon i[class*="fa-light"],
  .link-icon i[class*="fa-thin"] {
    font-family: "Font Awesome 6 Pro", FontAwesome !important;
    font-weight: 300;
  }
  
  .link-card:hover .link-icon {
    transform: scale(1.05);
  }
  
  .link-card:hover .link-icon i {
    transform: scale(1.1);
  }
  
  .link-text {
    flex: 1;
    min-width: 0;
  }
  
  .link-title {
    font-size: 1rem;
    font-weight: 600;
    margin: 0 0 0.25rem 0;
    line-height: 1.3;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }
  
  .link-description {
    font-size: 0.875rem;
    color: var(--link-text-secondary, #666);
    margin: 0;
    line-height: 1.3;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }
  
  .link-arrow {
    color: var(--link-text, #2C2C2C);
    opacity: 0.6;
    transition: all 0.3s ease;
    flex-shrink: 0;
  }
  
  .link-arrow i {
    font-size: 0.875rem;
    font-family: "Font Awesome 6 Free", FontAwesome !important;
    font-weight: 900;
  }
  
  .link-card:hover .link-arrow {
    opacity: 1;
    transform: translateX(4px);
  }
  
  @media (max-width: 480px) {
    .link-card {
      padding: 0.875rem 1rem;
    }
    
    .link-icon {
      width: 40px;
      height: 40px;
    }
    
    .link-icon i {
      font-size: 1.125rem;
    }
    
    .link-title {
      font-size: 0.9rem;
    }
    
    .link-description {
      font-size: 0.8rem;
    }
  }
</style>