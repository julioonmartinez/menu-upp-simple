---
// src/components/HomePage/RestaurantsSection.astro
import type { Restaurant, LinkTree } from '../../interfaces';

interface RestaurantData {
  restaurant: Restaurant;
  linkTree: LinkTree;
}

interface Props {
  restaurants: RestaurantData[];
  title?: string;
  description?: string;
}

const {
  restaurants,
  title = "Experiencias Gastronómicas Exclusivas",
  description = "Descubre restaurantes únicos que han transformado su presencia digital con MenuUpp"
} = Astro.props;
---

<section class="restaurants-section" id="restaurantes">
  <div class="container">
    <div class="section-header animate-on-scroll">
      <div class="section-badge">
        <i class="fas fa-crown"></i>
        <span>Restaurantes Destacados</span>
      </div>
      <h2 class="section-title">{title.split(' ').map((word, i) => 
        i === title.split(' ').length - 1 ? 
        <span class="text-orange">{word}</span> : 
        word + ' '
      )}</h2>
      <p class="section-description">
        {description}
      </p>
    </div>
    
    <div class="restaurants-grid animate-on-scroll">
      {restaurants.map((data, index) => (
        <div class="restaurant-card" style={`--delay: ${index * 0.15}s`}>
          <div class="card-image">
            <img src={data.restaurant.imageCover || data.restaurant.image || '/images/default-restaurant.webp'} 
                 alt={data.restaurant.name} 
                 loading="lazy" />
            <div class="card-overlay">
              <a href={`/${data.restaurant.username}`} class="visit-btn">
                <span>Visitar Menú</span>
                <i class="fas fa-arrow-right"></i>
              </a>
            </div>
            <div class="premium-badge">Premium</div>
          </div>
          <div class="card-content">
            <div class="card-header">
              <h3 class="card-title">{data.restaurant.name}</h3>
              <div class="card-rating">
                <span class="rating-stars">⭐⭐⭐⭐⭐</span>
                <span class="rating-text">4.9</span>
              </div>
            </div>
            <p class="card-description">{data.restaurant.description}</p>
            <div class="card-tags">
              {data.restaurant.cuisineType?.slice(0, 3).map(cuisine => (
                <span class="tag">{cuisine}</span>
              ))}
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .restaurants-section {
    padding: var(--space-4xl) 0;
    background: var(--neutral-light);
  }
  
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 var(--space-lg);
  }
  
  .section-header {
    text-align: center;
    margin-bottom: var(--space-4xl);
  }
  
  .section-badge {
    display: inline-flex;
    align-items: center;
    gap: var(--space-sm);
    padding: var(--space-sm) var(--space-lg);
    background: rgba(255, 107, 0, 0.1);
    border: 1px solid rgba(255, 107, 0, 0.3);
    border-radius: var(--radius-full);
    color: var(--primary-orange);
    font-size: 0.875rem;
    font-weight: 600;
    margin-bottom: var(--space-lg);
  }
  
  .section-title {
    font-family: var(--font-primary);
    font-size: clamp(2rem, 5vw, 3rem);
    font-weight: 800;
    line-height: 1.2;
    color: var(--primary-blue);
    margin-bottom: var(--space-lg);
  }
  
  .text-orange {
    color: var(--primary-orange);
  }
  
  .section-description {
    font-size: 1.2rem;
    color: var(--secondary-gray);
    max-width: 600px;
    margin: 0 auto;
    line-height: 1.6;
  }
  
  .restaurants-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: var(--space-2xl);
  }
  
  .restaurant-card {
    background: var(--pure-white);
    border-radius: var(--radius-xl);
    overflow: hidden;
    box-shadow: var(--shadow-md);
    transition: all var(--transition-normal);
    animation: cardSlideUp 0.6s ease-out forwards;
    animation-delay: var(--delay);
    opacity: 0;
    transform: translateY(30px);
  }
  
  @keyframes cardSlideUp {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  .restaurant-card:hover {
    transform: translateY(-8px);
    box-shadow: var(--shadow-xl);
  }
  
  .card-image {
    position: relative;
    height: 240px;
    overflow: hidden;
  }
  
  .card-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform var(--transition-slow);
  }
  
  .restaurant-card:hover .card-image img {
    transform: scale(1.1);
  }
  
  .card-overlay {
    position: absolute;
    inset: 0;
    background: var(--gradient-overlay);
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    transition: opacity var(--transition-normal);
  }
  
  .restaurant-card:hover .card-overlay {
    opacity: 1;
  }
  
  .visit-btn {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    padding: var(--space-md) var(--space-xl);
    background: var(--gradient-primary);
    color: var(--pure-white);
    border-radius: var(--radius-full);
    font-weight: 600;
    text-decoration: none;
    transform: translateY(20px);
    transition: all var(--transition-normal);
  }
  
  .restaurant-card:hover .visit-btn {
    transform: translateY(0);
  }
  
  .visit-btn:hover {
    transform: translateY(-2px) scale(1.05);
  }
  
  .premium-badge {
    position: absolute;
    top: var(--space-lg);
    right: var(--space-lg);
    padding: var(--space-sm) var(--space-md);
    background: var(--gradient-primary);
    color: var(--pure-white);
    border-radius: var(--radius-full);
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    box-shadow: var(--shadow-sm);
  }
  
  .card-content {
    padding: var(--space-xl);
  }
  
  .card-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: var(--space-md);
    gap: var(--space-md);
  }
  
  .card-title {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--primary-blue);
    margin: 0;
    line-height: 1.3;
  }
  
  .card-rating {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    flex-shrink: 0;
  }
  
  .rating-stars {
    font-size: 0.875rem;
  }
  
  .rating-text {
    font-weight: 600;
    color: var(--primary-orange);
    font-size: 0.9rem;
  }
  
  .card-description {
    color: var(--secondary-gray);
    line-height: 1.6;
    margin-bottom: var(--space-lg);
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  .card-tags {
    display: flex;
    gap: var(--space-sm);
    flex-wrap: wrap;
  }
  
  .tag {
    padding: var(--space-xs) var(--space-md);
    background: rgba(255, 107, 0, 0.1);
    color: var(--primary-orange);
    border-radius: var(--radius-full);
    font-size: 0.75rem;
    font-weight: 500;
    text-transform: capitalize;
    border: 1px solid rgba(255, 107, 0, 0.2);
    transition: all var(--transition-fast);
  }
  
  .tag:hover {
    background: rgba(255, 107, 0, 0.2);
    transform: translateY(-1px);
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .restaurants-grid {
      grid-template-columns: 1fr;
      gap: var(--space-xl);
    }
    
    .card-image {
      height: 200px;
    }
    
    .card-header {
      flex-direction: column;
      align-items: flex-start;
      gap: var(--space-sm);
    }
    
    .card-rating {
      align-self: flex-end;
    }
  }
  
  @media (max-width: 480px) {
    .card-content {
      padding: var(--space-lg);
    }
    
    .section-title {
      font-size: 2rem;
    }
    
    .section-description {
      font-size: 1rem;
    }
  }
  
  /* Animation states */
  .restaurant-card.animate-in {
    opacity: 1;
    transform: translateY(0);
  }
  
  /* Accessibility */
  @media (prefers-reduced-motion: reduce) {
    .restaurant-card {
      animation: none;
      opacity: 1;
      transform: none;
    }
    
    .card-image img,
    .visit-btn,
    .tag {
      transition: none;
    }
  }
  
  /* Print styles */
  @media print {
    .card-overlay,
    .premium-badge {
      display: none;
    }
    
    .restaurant-card {
      break-inside: avoid;
      box-shadow: none;
      border: 1px solid #ccc;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    // Track restaurant card clicks for analytics
    const restaurantCards = document.querySelectorAll('.restaurant-card');
    
    restaurantCards.forEach(card => {
      const visitBtn = card.querySelector('.visit-btn');
      if (visitBtn) {
        visitBtn.addEventListener('click', (e) => {
          const restaurantName = card.querySelector('.card-title')?.textContent;
          
          // Analytics tracking
          window.dispatchEvent(new CustomEvent('restaurantClicked', {
            detail: {
              restaurantName,
              source: 'homepage',
              timestamp: Date.now()
            }
          }));
          
          console.log('Restaurant visited:', restaurantName);
        });
      }
    });
    
    // Add hover effects for better UX
    restaurantCards.forEach(card => {
      card.addEventListener('mouseenter', () => {
        card.style.willChange = 'transform';
      });
      
      card.addEventListener('mouseleave', () => {
        card.style.willChange = 'auto';
      });
    });
  });
</script>