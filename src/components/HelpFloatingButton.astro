<style>
  /* Contenedor principal del botón flotante de ayuda */
  .help-floating-container {
    position: fixed;
    bottom: 20px;
    right: 30px;
    z-index: 999;
    display: flex;
    align-items: center;
  }

  /* Estilos para el botón flotante de ayuda */
  .help-floating-btn {
    width: 50px;
    height: 50px;
    border-radius: var(--radius-full);
    background-color: #25d366; /* Color oficial de WhatsApp */
    color: white;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: var(--transition);
    box-shadow: 0 4px 12px rgba(37, 211, 102, 0.3);
    text-decoration: none;
    animation: helpPulse 2s ease-in-out infinite;
  }

  .help-floating-btn:hover {
    background-color: #128c7e; /* Color más oscuro de WhatsApp */
    transform: translateY(-5px) scale(1.1);
    box-shadow: 0 8px 25px rgba(37, 211, 102, 0.4);
    animation: none;
  }

  .help-floating-btn:active {
    transform: translateY(-2px) scale(0.95);
  }

  /* Animación de pulso para el botón de ayuda */
  @keyframes helpPulse {
    0%, 100% { 
      transform: scale(1);
      box-shadow: 0 4px 12px rgba(37, 211, 102, 0.3);
    }
    50% { 
      transform: scale(1.05);
      box-shadow: 0 0 20px rgba(37, 211, 102, 0.6);
    }
  }

  /* Responsive para móviles */
  @media (max-width: 768px) {
    .help-floating-container {
      bottom: 16px;
      right: 20px;
    }

    .help-floating-btn {
      width: 45px;
      height: 45px;
    }
    
    .help-floating-btn svg {
      width: 20px;
      height: 20px;
    }
  }

  /* Ajuste cuando hay múltiples botones flotantes */
  @media (max-width: 480px) {
    .help-floating-container {
      /* bottom: 80px; Espacio para el botón de búsqueda */
    }
  }
</style> 