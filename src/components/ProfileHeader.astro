---
import type { Restaurant, LinkTree } from '../interfaces';

interface Props {
  restaurant: Restaurant;
  linkTree: LinkTree;
}

const { restaurant, linkTree } = Astro.props;
---

<div class="profile-header">
  <div class="cover-image">
    {linkTree.coverImage?.url && (
      <img 
        src={linkTree.coverImage.url} 
        alt={`${restaurant.name} cover`}
        class="cover-img"
      />
    )}
    <div class="overlay"></div>
  </div>
  
  <div class="profile-content">
    <div class="profile-image-container">
      {linkTree.profileImage?.url ? (
        <img 
          src={linkTree.profileImage.url} 
          alt={`${restaurant.name} logo`}
          class="profile-image"
        />
      ) : restaurant.logo && (
        <img 
          src={restaurant.logo} 
          alt={`${restaurant.name} logo`}
          class="profile-image"
        />
      )}
    </div>
    {restaurant.imageText_data ? (
  <div>
    <img 
      src={restaurant.imageText_data.url} 
      alt={`Logo de ${linkTree.title || restaurant.name}`} 
      height="80"
      width="240"
      style="object-fit: cover;"
      
    />
    <h1 class="sr-only">{linkTree.title || restaurant.name}</h1>
  </div>
) : (
  <h1 class="business-name">{linkTree.title || restaurant.name}</h1>
)}
    <p class="business-subtitle">{linkTree.description || restaurant.description}</p>
    
    <!-- {restaurant.address && (
      <div class="location-info">
        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
          <circle cx="12" cy="10" r="3"></circle>
        </svg>
        <span>{restaurant.address}</span>
      </div>
    )} -->
    
    {restaurant.schedule && (
      <div class="schedule-info">
        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <circle cx="12" cy="12" r="10"></circle>
          <polyline points="12,6 12,12 16,14"></polyline>
        </svg>
        <span>{restaurant.schedule}</span>
      </div>
    )}
  </div>
</div>

<style>
  .profile-header {
    position: relative;
    margin-bottom: 2rem;
  }
  
  .cover-image {
    position: relative;
    width: 100%;
    height: 200px;
    overflow: hidden;
    border-radius: 0 0 24px 24px;
  }
  
  .cover-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }
  
  .overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(to bottom, rgba(0,0,0,0.1), rgba(0,0,0,0.4));
  }
  
  .profile-content {
    position: relative;
    padding: 0 1.5rem;
    text-align: center;
    margin-top: -60px;
    z-index: 10;
  }

  .sr-only {
  position: absolute;
  width: 1px;
  height: 1px;
  padding: 0;
  margin: -1px;
  overflow: hidden;
  clip: rect(0, 0, 0, 0);
  white-space: nowrap;
  border: 0;
}
  
  .profile-image-container {
    display: flex;
    justify-content: center;
    margin-bottom: 1rem;
   
  }
  
  .profile-image {
    width: 120px;
    height: 120px;
    border-radius: 50%;
    border: 4px solid var(--background-color);
    box-shadow: 0 8px 32px rgba(0,0,0,0.15);
    object-fit: cover;
    /* background-color: white; */
     background-color:var( --background-color);
  }
  
  .business-name {
    font-size: 1.75rem;
    font-weight: 700;
    color: var(--text-color, #2C2C2C);
    margin-bottom: 0.5rem;
    line-height: 1.2;
  }
  
  .business-subtitle {
    font-size: 1rem;
    color: var(--text-color, #666);
    margin-bottom: 1rem;
    line-height: 1.4;
  }
  
  .location-info,
  .schedule-info {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    font-size: 0.875rem;
    color: var(--text-color, #666);
    margin-bottom: 0.5rem;
    opacity: 0.7;
  }
  
  .location-info svg,
  .schedule-info svg {
    flex-shrink: 0;
  }
  
  @media (max-width: 480px) {
    .cover-image {
      height: 160px;
    }
    
    .profile-image {
      width: 100px;
      height: 100px;
    }
    
    .business-name {
      font-size: 1.5rem;
    }
    
    .business-subtitle {
      font-size: 0.9rem;
    }
  }
</style>



