---
export interface Props {
  text: string;
  href: string;
  variant?: 'primary' | 'secondary' | 'outline';
  size?: 'sm' | 'md' | 'lg';
  fullWidth?: boolean;
  class?: string;
}

const { 
  text, 
  href, 
  variant = 'primary', 
  size = 'md', 
  fullWidth = false,
  class: className = ''
} = Astro.props;

const getVariantClass = () => {
  switch(variant) {
    case 'primary':
      return 'btn-primary';
    case 'secondary':
      return 'btn-secondary';
    case 'outline':
      return 'btn-outline';
    default:
      return 'btn-primary';
  }
};

const getSizeClass = () => {
  switch(size) {
    case 'sm':
      return 'btn-sm';
    case 'md':
      return 'btn-md';
    case 'lg':
      return 'btn-lg';
    default:
      return 'btn-md';
  }
};

const classes = [
  'btn',
  getVariantClass(),
  getSizeClass(),
  fullWidth ? 'btn-full' : '',
  className
].filter(Boolean).join(' ');
---

<style>
  .btn {
    display: inline-block;
    border-radius: var(--radius-lg);
    font-weight: 700;
    text-align: center;
    transition: var(--transition), box-shadow 0.3s cubic-bezier(.4,2,.6,1);
    cursor: pointer;
    box-shadow: 0 2px 10px rgba(34,45,53,0.07);
    border: none;
    letter-spacing: 0.2px;
  }
  .btn-primary {
    background: linear-gradient(90deg, var(--primary) 60%, var(--primary-light) 100%);
    color: white;
    box-shadow: 0 4px 18px 0 rgba(241,90,41,0.13);
    border: none;
  }
  .btn-primary:hover {
    background: linear-gradient(90deg, var(--primary-dark) 60%, var(--primary) 100%);
    color: white;
    transform: scale(1.04) translateY(-4px);
    box-shadow: 0 8px 28px 0 rgba(241,90,41,0.18);
    filter: brightness(1.05);
  }
  .btn-secondary {
    background-color: white;
    color: var(--primary);
    border: 1.5px solid var(--primary-light);
  }
  .btn-secondary:hover {
    background-color: var(--light-gray);
    color: var(--primary-dark);
    transform: scale(1.03) translateY(-3px);
    box-shadow: var(--shadow-sm);
  }
  .btn-outline {
    background-color: transparent;
    color: var(--primary);
    border: 2px solid var(--primary);
  }
  .btn-outline:hover {
    background: linear-gradient(90deg, var(--primary) 60%, var(--primary-light) 100%);
    color: white;
    transform: scale(1.04) translateY(-4px);
    box-shadow: 0 8px 28px 0 rgba(241,90,41,0.18);
  }
  
  .btn-sm {
    padding: 0.4rem 1rem;
    font-size: 0.875rem;
  }
  
  .btn-md {
    padding: 0.8rem 2rem;
    font-size: 1rem;
  }
  
  .btn-lg {
    padding: 1rem 2.5rem;
    font-size: 1.125rem;
  }
  
  .btn-full {
    display: block;
    width: 100%;
  }
  
  @media (max-width: 576px) {
    .btn-md, .btn-lg {
      padding: 0.7rem 1.8rem;
    }
  }
</style>

<a href={href} class={classes}>
  {text}
</a>