---
export interface Props {
  icon: string;
  title: string;
  description: string;
  index: number;
  color?: string;
}

const { icon, title, description, index, color = 'var(--primary-color)' } = Astro.props;

// Calcula un leve retraso en la animación según el índice
const animationDelay = `${index * 0.1}s`;
---

<div class="feature-card fade-in" style={`animation-delay: ${animationDelay}`}>
  <div class="feature-icon" style={`background: ${color}`}>
    <i class={`fas ${icon}`}></i>
  </div>
  <div class="feature-content">
    <h3>{title}</h3>
    <p>{description}</p>
  </div>
  <div class="feature-decoration" style={`background: ${color}`}></div>
</div>

<style>
  .feature-card {
    padding: var(--spacing-xl);
    border-radius: var(--radius-lg);
    background: white;
    box-shadow: var(--shadow-md);
    transition: all var(--transition-normal);
    position: relative;
    overflow: hidden;
    border: 1px solid rgba(0, 0, 0, 0.05);
    display: flex;
    flex-direction: column;
    gap: var(--spacing-lg);
  }
  
  .feature-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, rgba(255, 107, 53, 0.02) 0%, rgba(255, 140, 105, 0.02) 100%);
    opacity: 0;
    transition: opacity var(--transition-normal);
    z-index: 0;
  }
  
  .feature-card:hover {
    transform: translateY(-8px);
    box-shadow: var(--shadow-xl);
  }
  
  .feature-card:hover::before {
    opacity: 1;
  }
  
  .feature-icon {
    width: 60px;
    height: 60px;
    border-radius: var(--radius-lg);
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    z-index: 1;
    box-shadow: 0 4px 20px rgba(255, 107, 53, 0.3);
  }
  .feature-icon i {
    color: white;
  }
  
  .icon-text {
    font-size: 1.8rem;
    color: white;
  }
  
  .icon-text i {
    font-size: inherit;
    color: white;
  }
  
  .feature-content {
    position: relative;
    z-index: 1;
    flex: 1;
  }
  
  .feature-content h3 {
    font-size: var(--font-xl);
    font-weight: 700;
    color: var(--text-primary);
    margin-bottom: var(--spacing-sm);
    line-height: 1.3;
  }
  
  .feature-content p {
    color: var(--text-secondary);
    line-height: 1.6;
    margin: 0;
    font-size: var(--font-base);
  }
  
  .feature-decoration {
    position: absolute;
    top: 0;
    left: 0;
    width: 4px;
    height: 100%;
    opacity: 0.8;
    transition: width var(--transition-normal);
  }
  
  .feature-card:hover .feature-decoration {
    width: 100%;
    opacity: 0.05;
  }
  
  /* Animación de entrada */
  .fade-in {
    opacity: 0;
    transform: translateY(20px);
    animation: cardFadeIn 0.6s ease forwards;
  }
  
  @keyframes cardFadeIn {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  /* Responsive */
  @media (max-width: 768px) {
    .feature-card {
      padding: var(--spacing-lg);
      gap: var(--spacing-md);
    }
    
    .feature-icon {
      width: 50px;
      height: 50px;
    }
    
    .icon-text {
      font-size: 1.5rem;
    }
    
    .feature-content h3 {
      font-size: var(--font-lg);
    }
  }
  
  @media (max-width: 576px) {
    .feature-card {
      padding: var(--spacing-md);
    }
    
    .feature-icon {
      width: 45px;
      height: 45px;
    }
    
    .icon-text {
      font-size: 1.3rem;
    }
  }
  
  /* Optimizaciones de rendimiento */
  @media (prefers-reduced-motion: reduce) {
    .feature-card {
      transition: none;
    }
    
    .feature-card:hover {
      transform: none;
    }
    
    .feature-card:hover .feature-decoration {
      width: 4px;
    }
    
    .fade-in {
      animation: none;
      opacity: 1;
      transform: none;
    }
  }
</style>