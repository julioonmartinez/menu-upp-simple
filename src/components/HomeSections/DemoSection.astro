---
import Button from './Button.astro';
import { mockRestaurants } from '../../data/mockData';

// Obtener los datos de los restaurantes
const restaurants = Object.values(mockRestaurants);
---

<section class="demo-section" id="demo">
  <div class="demo-container">
    <!-- Header de la sección -->
    <div class="section-header">
      <div class="header-badge">
        <span class="badge-icon"><i class="fas fa-utensils"></i></span>
        Ejemplos
      </div>
      <h2 class="section-title">
        Tipos de <span class="title-accent">Restaurantes</span>
      </h2>
      <p class="section-description">
        Descubre cómo Menu-Upp se adapta a diferentes tipos de establecimientos 
        gastronómicos y mejora la experiencia de tus clientes.
      </p>
    </div>
    
    <!-- Grid de restaurantes -->
    <div class="restaurant-cards">
      {restaurants.map(({ restaurant, linkTree }) => (
        <div class="restaurant-card" id={`restaurant-${restaurant.id}`}>  
          <div class="card-image-container">
            <img 
              src={restaurant.coverImage || restaurant.logo} 
              alt={restaurant.name} 
              class="card-img"
              width="400"
              height="180"
            />
            <div class="card-overlay">
              <div class="overlay-content">
                <span class="cuisine-badge">
                  <span set:html={restaurant.cuisineType?.includes('italiana') ? 
                    '<i class="fas fa-pizza-slice"></i>' : 
                   restaurant.cuisineType?.includes('mexicana') ? 
                    '<i class="fas fa-pepper-hot"></i>' : 
                   restaurant.cuisineType?.includes('japonesa') ? 
                    '<i class="fas fa-fish"></i>' : 
                    '<i class="fas fa-utensils"></i>'}></span>
                  {restaurant.cuisineType?.[0] || 'Restaurante'}
                </span>
              </div>
            </div>
          </div>
          
          <div class="card-content">
            <div class="card-header">
              <h3>{restaurant.name}</h3>
              <div class="card-status">
                {restaurant.isPremium ? (
                  <span class="status-premium"><i class="fas fa-star"></i> Premium</span>
                ) : (
                  <span class="status-basic">Básico</span>
                )}
              </div>
            </div>
            
            <p class="description">
              {restaurant.description ? 
                (restaurant.description.length > 80 ? 
                  restaurant.description.slice(0, 80) + '…' : 
                  restaurant.description) : 
                'Descubre nuestra deliciosa selección de platillos preparados con los mejores ingredientes.'}
            </p>
            
            <div class="card-details">
              <span class="detail-item">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"/>
                  <circle cx="12" cy="10" r="3"/>
                </svg>
                {restaurant.address?.split(',')[0] || 'Ubicación'}
              </span>
            </div>
            
            <div class="card-actions">
              <a href={`/${restaurant.username}`} class="btn btn-primary">
                <span>Ver Perfil</span>
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M5 12h14M12 5l7 7-7 7"/>
                </svg>
              </a>
              <a href={`/${restaurant.username}/menu`} class="btn btn-secondary">
                <span>Ver Menú</span>
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M9 12l2 2 4-4"/>
                  <path d="M21 12c0 4.97-4.03 9-9 9s-9-4.03-9-9 4.03-9 9-9 9 4.03 9 9z"/>
                </svg>
              </a>
            </div>
          </div>
        </div>
      ))}
    </div>
    
    <!-- Call to action adicional -->
    <div class="demo-cta">
      <div class="cta-content">
        <h3>¿Te gusta lo que ves?</h3>
        <p>Crea tu propio menú digital y únete a cientos de restaurantes que ya confían en Menu-Upp</p>
        <a href="/login" class="cta-button">
          <span>Crear mi menú gratis</span>
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M5 12h14M12 5l7 7-7 7"/>
          </svg>
        </a>
      </div>
    </div>
  </div>
</section>

<style>
/* Estilos modernos para la sección de demostración */
.demo-section {
  position: relative;
  overflow: hidden;
}

/* Fondo con patrones sutiles */
.demo-section::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(135deg, rgba(255, 107, 53, 0.02) 0%, rgba(255, 140, 105, 0.02) 100%);
  z-index: 0;
}

.demo-container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 var(--spacing-lg);
  position: relative;
  z-index: 1;
}

/* Header de la sección */
.section-header {
  text-align: center;
  margin-bottom: var(--spacing-5xl);
  max-width: 800px;
  margin-left: auto;
  margin-right: auto;
}

.header-badge {
  display: inline-flex;
  align-items: center;
  gap: var(--spacing-sm);
  background: linear-gradient(135deg, rgba(255, 107, 53, 0.1), rgba(255, 140, 105, 0.1));
  color: var(--primary-color);
  font-size: var(--font-sm);
  font-weight: 600;
  padding: var(--spacing-sm) var(--spacing-lg);
  border-radius: var(--radius-full);
  margin-bottom: var(--spacing-lg);
  border: 1px solid rgba(255, 107, 53, 0.2);
}

.badge-icon {
  font-size: var(--font-base);
}

.section-title {
  font-size: clamp(2rem, 4vw, 3rem);
  font-weight: 700;
  line-height: 1.2;
  margin-bottom: var(--spacing-lg);
  color: var(--text-primary);
}

.title-accent {
  background: linear-gradient(135deg, var(--primary-color), var(--primary-light));
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.section-description {
  font-size: clamp(1rem, 1.5vw, 1.2rem);
  color: var(--text-secondary);
  line-height: 1.6;
  max-width: 600px;
  margin: 0 auto;
}

/* Grid de restaurantes */
.restaurant-cards {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
  gap: var(--spacing-xl);
  margin-bottom: var(--spacing-5xl);
}

/* Card de restaurante */
.restaurant-card {
  background: white;
  border-radius: var(--radius-xl);
  overflow: hidden;
  box-shadow: var(--shadow-md);
  transition: all var(--transition-normal);
  cursor: pointer;
  border: 1px solid rgba(0, 0, 0, 0.05);
  position: relative;
}

.restaurant-card:hover {
  transform: translateY(-8px);
  box-shadow: var(--shadow-xl);
}

/* Contenedor de imagen */
.card-image-container {
  position: relative;
  overflow: hidden;
  height: 200px;
}

.card-img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform var(--transition-normal);
}

.restaurant-card:hover .card-img {
  transform: scale(1.05);
}

/* Overlay de la imagen */
.card-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(0, 0, 0, 0.3) 0%, transparent 100%);
  opacity: 0;
  transition: opacity var(--transition-normal);
  display: flex;
  align-items: flex-end;
  padding: var(--spacing-md);
}

.restaurant-card:hover .card-overlay {
  opacity: 1;
}

.cuisine-badge {
  background: rgba(255, 255, 255, 0.9);
  color: var(--text-primary);
  padding: var(--spacing-xs) var(--spacing-md);
  border-radius: var(--radius-full);
  font-size: var(--font-sm);
  font-weight: 600;
  backdrop-filter: blur(10px);
  display: flex;
  align-items: center;
  gap: var(--spacing-xs);
}

/* Contenido de la card */
.card-content {
  padding: var(--spacing-xl);
  display: flex;
  flex-direction: column;
  gap: var(--spacing-md);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  gap: var(--spacing-sm);
}

.card-header h3 {
  font-size: var(--font-xl);
  font-weight: 700;
  color: var(--text-primary);
  margin: 0;
  line-height: 1.3;
  flex: 1;
}

.card-status {
  flex-shrink: 0;
}

.status-premium {
  background: linear-gradient(135deg, #FFD700, #FFA500);
  color: white;
  padding: var(--spacing-xs) var(--spacing-sm);
  border-radius: var(--radius-full);
  font-size: var(--font-xs);
  font-weight: 600;
}

.status-basic {
  background: var(--bg-secondary);
  color: var(--text-secondary);
  padding: var(--spacing-xs) var(--spacing-sm);
  border-radius: var(--radius-full);
  font-size: var(--font-xs);
  font-weight: 600;
}

.description {
  color: var(--text-secondary);
  line-height: 1.6;
  font-size: var(--font-base);
  margin: 0;
}

.card-details {
  display: flex;
  gap: var(--spacing-md);
  font-size: var(--font-sm);
  color: var(--text-muted);
}

.detail-item {
  display: flex;
  align-items: center;
  gap: var(--spacing-xs);
}

.detail-item svg {
  color: var(--primary-color);
}

.card-actions {
  display: flex;
  gap: var(--spacing-sm);
  margin-top: auto;
}

.btn {
  display: inline-flex;
  align-items: center;
  gap: var(--spacing-xs);
  padding: var(--spacing-sm) var(--spacing-md);
  border-radius: var(--radius-md);
  font-weight: 600;
  text-decoration: none;
  font-size: var(--font-sm);
  transition: all var(--transition-normal);
  border: none;
  cursor: pointer;
  flex: 1;
  justify-content: center;
}

.btn-primary {
  background: linear-gradient(135deg, var(--primary-color), var(--primary-light));
  color: white;
}

.btn-primary:hover {
  transform: translateY(-2px);
  box-shadow: 0 4px 20px rgba(255, 107, 53, 0.3);
}

.btn-secondary {
  background: var(--bg-secondary);
  color: var(--text-primary);
  border: 1px solid rgba(0, 0, 0, 0.1);
}

.btn-secondary:hover {
  background: var(--primary-color);
  color: white;
  border-color: var(--primary-color);
}

.btn svg {
  transition: transform var(--transition-normal);
}

.btn:hover svg {
  transform: translateX(2px);
}

/* Call to action adicional */
.demo-cta {
  text-align: center;
  padding: var(--spacing-4xl) var(--spacing-2xl);
  background: linear-gradient(135deg, var(--bg-secondary) 0%, var(--bg-primary) 100%);
  border-radius: var(--radius-xl);
  border: 1px solid rgba(255, 107, 53, 0.1);
  position: relative;
  overflow: hidden;
}

.demo-cta::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(255, 107, 53, 0.02) 0%, rgba(255, 140, 105, 0.02) 100%);
  z-index: 0;
}

.cta-content {
  position: relative;
  z-index: 1;
}

.demo-cta h3 {
  font-size: var(--font-3xl);
  font-weight: 700;
  color: var(--text-primary);
  margin-bottom: var(--spacing-sm);
}

.demo-cta p {
  font-size: var(--font-lg);
  color: var(--text-secondary);
  margin-bottom: var(--spacing-xl);
}

.cta-button {
  display: inline-flex;
  align-items: center;
  gap: var(--spacing-sm);
  background: linear-gradient(135deg, var(--primary-color), var(--primary-light));
  color: white;
  padding: var(--spacing-md) var(--spacing-2xl);
  border-radius: var(--radius-lg);
  font-weight: 600;
  text-decoration: none;
  transition: all var(--transition-normal);
  box-shadow: 0 4px 20px rgba(255, 107, 53, 0.3);
}

.cta-button:hover {
  transform: translateY(-2px);
  box-shadow: 0 8px 30px rgba(255, 107, 53, 0.4);
}

.cta-button svg {
  transition: transform var(--transition-normal);
}

.cta-button:hover svg {
  transform: translateX(4px);
}

/* Responsive */
@media (max-width: 992px) {
  .restaurant-cards {
    grid-template-columns: repeat(2, 1fr);
    gap: var(--spacing-lg);
  }
}

@media (max-width: 768px) {
  .restaurant-cards {
    grid-template-columns: 1fr;
    max-width: 500px;
    margin: 0 auto var(--spacing-4xl);
  }
  
  .card-content {
    padding: var(--spacing-lg);
  }
  
  .card-header h3 {
    font-size: var(--font-lg);
  }
  
  .card-actions {
    flex-direction: column;
    gap: var(--spacing-xs);
  }
  
  .demo-cta {
    padding: var(--spacing-3xl) var(--spacing-lg);
  }
  
  .demo-cta h3 {
    font-size: var(--font-2xl);
  }
  
  .demo-cta p {
    font-size: var(--font-base);
  }
}

@media (max-width: 576px) {
  .demo-container {
    padding: 0 var(--spacing-md);
  }
  
  .section-header {
    margin-bottom: var(--spacing-4xl);
  }
  
  .restaurant-cards {
    gap: var(--spacing-md);
  }
  
  .card-content {
    padding: var(--spacing-md);
  }
  
  .btn {
    font-size: var(--font-sm);
    padding: var(--spacing-sm) var(--spacing-md);
  }
  
  .demo-cta {
    padding: var(--spacing-2xl) var(--spacing-md);
  }
  
  .cta-button {
    width: 100%;
    justify-content: center;
  }
}

/* Animaciones */
.restaurant-cards {
  opacity: 0;
  transform: translateY(20px);
  animation: demoFadeIn 0.8s ease forwards;
  animation-delay: 0.2s;
}

@keyframes demoFadeIn {
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* Optimizaciones de rendimiento */
@media (prefers-reduced-motion: reduce) {
  .restaurant-cards {
    animation: none;
    opacity: 1;
    transform: none;
  }
  
  .restaurant-card:hover {
    transform: none;
  }
  
  .restaurant-card:hover .card-img {
    transform: none;
  }
  
  .btn:hover {
    transform: none;
  }
  
  .btn:hover svg {
    transform: none;
  }
  
  .cta-button:hover {
    transform: none;
  }
  
  .cta-button:hover svg {
    transform: none;
  }
}
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const restaurantCards = document.querySelectorAll('.restaurant-card');
    
    restaurantCards.forEach(card => {
      card.addEventListener('click', () => {
        // Remover clase activa de todas las cards
        restaurantCards.forEach(c => c.classList.remove('active'));
        // Agregar clase activa a la card clickeada
        card.classList.add('active');
      });
    });
  });
</script>