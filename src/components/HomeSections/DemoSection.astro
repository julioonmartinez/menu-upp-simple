---
import Button from './Button.astro';
import { mockRestaurants } from '../../data/mockData';

// Obtener los datos de los restaurantes
const restaurants = Object.values(mockRestaurants);
---

<section class="demo-section" id="demo">
  <div class="demo-container">
    <div class="section-header demo-animate">
      <h2>Tipos de Restaurantes</h2>
      <p>Descubre c√≥mo Menu-Upp se adapta a diferentes tipos de establecimientos gastron√≥micos.</p>
    </div>
    
    <div class="restaurant-cards demo-animate">
      {restaurants.map(({ restaurant, linkTree }) => (
        <div class="restaurant-card" id={`restaurant-${restaurant.id}`}>  
          <img 
            src={restaurant.imageCover || restaurant.logo} 
            alt={restaurant.name} 
            class="card-img"
            width="400"
            height="180"
          />
          <div class="card-content">
            <div class="card-header">
              <span class="card-icon">
                {restaurant.cuisineType?.includes('italiana') ? 'üçù' : 
                 restaurant.cuisineType?.includes('mexicana') ? 'üåÆ' : 
                 restaurant.cuisineType?.includes('japonesa') ? 'üç£' : 'üçΩÔ∏è'}
              </span>
              <h3>{restaurant.name}</h3>
            </div>
            <div class="cuisine-type">{restaurant.cuisineType?.slice(0, 2).join(', ')}</div>
            <p class="description">{restaurant.description ? (restaurant.description.length > 80 ? restaurant.description.slice(0, 80) + '‚Ä¶' : restaurant.description) : ''}</p>
            <div class="card-details">
              <span class="detail-item">üìç {restaurant.address?.split(',')[0]}</span>
              <span class="detail-item">{restaurant.isPremium ? '‚≠ê Premium' : 'B√°sico'}</span>
            </div>
            <div class="card-actions">
              <a href={`/${restaurant.username}`} class="btn btn-primary">Ver Perfil</a>
              <a href={`/${restaurant.username}/menu`} class="btn btn-secondary">Ver Men√∫</a>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
/* Estilos para la secci√≥n de demostraci√≥n */
.demo-section {
  position: relative;
  background-color: var(--light-gray);
  overflow: hidden;
  padding: var(--space-xl) 0;
}

.demo-section::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-image: linear-gradient(120deg, var(--primary) 0%, var(--primary-dark) 100%);
  opacity: 0.05;
  z-index: 0;
}

.demo-container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 var(--space-md);
  width: 92%;
}

.section-header {
  text-align: center;
  margin-bottom: var(--space-lg);
}

/* Animaci√≥n para elementos */
.demo-animate {
  opacity: 0;
  transform: translateY(20px);
  animation: demoFadeIn 0.5s ease forwards;
}

.demo-animate:nth-child(1) { animation-delay: 0.1s; }
.demo-animate:nth-child(2) { animation-delay: 0.2s; }

@keyframes demoFadeIn {
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* Contenedor de cards de restaurantes */
.restaurant-cards {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: var(--space-md);
  position: relative;
  z-index: 1;
  max-width: 1000px;
  margin: 0 auto;
}

/* Card de restaurante */
.restaurant-card {
  background-color: white;
  border-radius: var(--radius-lg);
  overflow: hidden;
  box-shadow: var(--shadow-md);
  transition: var(--transition);
  cursor: pointer;
  display: flex;
  flex-direction: column;
  min-height: 340px;
}

.restaurant-card:hover {
  transform: translateY(-6px);
  box-shadow: var(--shadow-lg);
}

/* Imagen de la card */
.card-img {
  width: 100%;
  height: 160px;
  object-fit: cover;
  border-top-left-radius: var(--radius-lg);
  border-top-right-radius: var(--radius-lg);
}

.card-content {
  display: flex;
  flex-direction: column;
  gap: 0.5rem;
  padding: var(--space-md);
  flex: 1;
}

.card-header {
  display: flex;
  align-items: center;
  gap: 0.6rem;
  margin-bottom: 0.2rem;
}

.card-icon {
  font-size: 1.5rem;
}

.card-content h3 {
  font-size: 1.1rem;
  font-weight: 700;
  color: var(--text-dark);
  margin: 0;
}

.cuisine-type {
  font-size: 0.95rem;
  color: var(--primary);
  font-weight: 500;
  margin-bottom: 0.1rem;
  text-transform: capitalize;
}

.description {
  color: var(--text-gray);
  line-height: 1.4;
  font-size: 0.92rem;
  margin-bottom: 0.2rem;
}

.card-details {
  display: flex;
  gap: 0.7rem;
  font-size: 0.85rem;
  color: var(--text-gray);
  margin-bottom: 0.2rem;
}

.detail-item {
  display: flex;
  align-items: center;
  gap: 0.2rem;
}

.card-actions {
  display: flex;
  gap: 0.5rem;
  margin-top: auto;
}

.btn {
  display: inline-block;
  padding: 0.5rem 1.1rem;
  border-radius: var(--radius-md);
  font-weight: 600;
  text-align: center;
  text-decoration: none;
  font-size: 0.98rem;
  transition: background 0.2s, color 0.2s, box-shadow 0.2s;
  border: none;
  cursor: pointer;
}

.btn-primary {
  background: var(--primary);
  color: #fff;
}

.btn-primary:hover {
  background: var(--primary-dark);
}

.btn-secondary {
  background: var(--primary-light);
  color: var(--primary);
}

.btn-secondary:hover {
  background: var(--primary);
  color: #fff;
}

/* Media queries */
@media (max-width: 992px) {
  .restaurant-cards {
    grid-template-columns: repeat(2, 1fr);
    gap: var(--space-md);
    max-width: 800px;
  }
}

@media (max-width: 768px) {
  .restaurant-cards {
    grid-template-columns: 1fr;
    max-width: 400px;
    margin: 0 auto;
  }
  
  .restaurant-card {
    min-height: 0;
  }
  
  .card-content {
    padding: var(--space-md);
  }
  
  .card-header {
    gap: 0.5rem;
  }
  
  .card-icon {
    font-size: 1.2rem;
  }
  
  .card-content h3 {
    font-size: 1rem;
  }
  
  .btn {
    font-size: 1rem;
    padding: 0.6rem 1rem;
  }
  
  .card-actions {
    flex-direction: column;
    gap: 0.4rem;
  }
}

@media (max-width: 576px) {
  .restaurant-cards {
    gap: var(--space-sm);
  }
  
  .card-content {
    padding: var(--space-sm);
  }
  
  .btn {
    font-size: 0.98rem;
    padding: 0.7rem 0.8rem;
  }
}
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const restaurantCards = document.querySelectorAll('.restaurant-card');
    
    restaurantCards.forEach(card => {
      card.addEventListener('click', () => {
        // Remover clase activa de todas las cards
        restaurantCards.forEach(c => c.classList.remove('active'));
        // Agregar clase activa a la card clickeada
        card.classList.add('active');
      });
    });
  });
</script>