---
import Button from './Button.astro';
import { mockRestaurants } from '../../data/mockData';

// Obtener los datos de los restaurantes
const restaurants = Object.values(mockRestaurants);
---

<section class="demo-section" id="demo">
  <div class="demo-container">
    <div class="section-header demo-animate">
      <h2>Tipos de Restaurantes</h2>
      <p>Descubre c√≥mo Menu-Upp se adapta a diferentes tipos de establecimientos gastron√≥micos.</p>
    </div>
    
    <div class="restaurant-cards demo-animate">
      {restaurants.map(({ restaurant, linkTree }) => (
        <div class="restaurant-card" id={`restaurant-${restaurant.id}`}>
          <div class="card-image">
            <img 
              src={restaurant.imageCover || restaurant.logo} 
              alt={restaurant.name} 
              width="400"
              height="250"
            >
            <div class="card-overlay">
              <a href={`/${restaurant.username}`} class="card-action-button">
                <span class="card-action-icon">‚ñ∂</span>
                <span class="card-action-text">Ver Perfil</span>
              </a>
            </div>
          </div>
          <div class="card-content">
            <div class="card-icon">
              {restaurant.cuisineType?.includes('italiana') ? 'üçù' : 
               restaurant.cuisineType?.includes('mexicana') ? 'üåÆ' : 
               restaurant.cuisineType?.includes('japonesa') ? 'üç£' : 'üçΩÔ∏è'}
            </div>
            <h3>{restaurant.name}</h3>
            <p>{restaurant.description}</p>
            <div class="card-features">
              {restaurant.cuisineType?.slice(0, 3).map(cuisine => (
                <span class="feature">{cuisine}</span>
              ))}
            </div>
            <div class="card-details">
              <div class="detail-item">
                <span class="detail-icon">üìç</span>
                <span class="detail-text">{restaurant.address?.split(',')[0]}</span>
              </div>
              <div class="detail-item">
                <span class="detail-icon">‚≠ê</span>
                <span class="detail-text">{restaurant.isPremium ? 'Premium' : 'B√°sico'}</span>
              </div>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
/* Estilos para la secci√≥n de demostraci√≥n */
.demo-section {
  position: relative;
  background-color: var(--light-gray);
  overflow: hidden;
  padding: var(--space-xl) 0;
}

.demo-section::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-image: linear-gradient(120deg, var(--primary) 0%, var(--primary-dark) 100%);
  opacity: 0.05;
  z-index: 0;
}

.demo-container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 var(--space-md);
  width: 92%;
}

.section-header {
  text-align: center;
  margin-bottom: var(--space-lg);
}

/* Animaci√≥n para elementos */
.demo-animate {
  opacity: 0;
  transform: translateY(20px);
  animation: demoFadeIn 0.5s ease forwards;
}

.demo-animate:nth-child(1) { animation-delay: 0.1s; }
.demo-animate:nth-child(2) { animation-delay: 0.2s; }

@keyframes demoFadeIn {
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* Contenedor de cards de restaurantes */
.restaurant-cards {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: var(--space-md);
  position: relative;
  z-index: 1;
  max-width: 1000px;
  margin: 0 auto;
}

/* Card de restaurante */
.restaurant-card {
  background-color: white;
  border-radius: var(--radius-lg);
  overflow: hidden;
  box-shadow: var(--shadow-md);
  transition: var(--transition);
  cursor: pointer;
}

.restaurant-card:hover {
  transform: translateY(-8px);
  box-shadow: var(--shadow-lg);
}

/* Imagen de la card */
.card-image {
  position: relative;
  width: 100%;
  height: 160px;
  overflow: hidden;
}

.card-image img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform 0.3s ease;
}

.restaurant-card:hover .card-image img {
  transform: scale(1.05);
}

/* Overlay de la imagen */
.card-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.4);
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0;
  transition: opacity 0.3s ease;
}

.restaurant-card:hover .card-overlay {
  opacity: 1;
}

.card-action-button {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  background-color: var(--primary);
  color: white;
  padding: 0.75rem 1.5rem;
  border-radius: var(--radius-md);
  font-weight: 500;
  text-decoration: none;
  transition: var(--transition);
  border: none;
  cursor: pointer;
}

.card-action-button:hover {
  background-color: var(--primary-dark);
  transform: translateY(-2px);
  box-shadow: var(--shadow-primary);
}

.card-action-icon {
  font-size: 0.9rem;
}

/* Contenido de la card */
.card-content {
  padding: var(--space-md);
}

.card-icon {
  font-size: 2rem;
  margin-bottom: var(--space-sm);
}

.card-content h3 {
  font-size: 1.2rem;
  font-weight: 600;
  color: var(--text-dark);
  margin-bottom: var(--space-sm);
}

.card-content p {
  color: var(--text-gray);
  line-height: 1.5;
  margin-bottom: var(--space-sm);
  font-size: 0.9rem;
}

/* Caracter√≠sticas de la card */
.card-features {
  display: flex;
  flex-wrap: wrap;
  gap: 0.4rem;
  margin-bottom: var(--space-sm);
}

.feature {
  display: inline-flex;
  align-items: center;
  font-size: 0.8rem;
  color: var(--primary);
  background-color: var(--primary-light);
  padding: 0.2rem 0.6rem;
  border-radius: var(--radius-sm);
  font-weight: 500;
  text-transform: capitalize;
}

.feature::before {
  content: '‚úì';
  margin-right: 0.25rem;
  font-weight: bold;
}

/* Detalles adicionales */
.card-details {
  display: flex;
  flex-direction: column;
  gap: 0.4rem;
  padding-top: var(--space-sm);
  border-top: 1px solid var(--light-gray);
}

.detail-item {
  display: flex;
  align-items: center;
  gap: 0.4rem;
  font-size: 0.85rem;
  color: var(--text-gray);
}

.detail-icon {
  font-size: 1rem;
}

.detail-text {
  font-weight: 500;
}

/* Media queries */
@media (max-width: 992px) {
  .restaurant-cards {
    grid-template-columns: repeat(2, 1fr);
    gap: var(--space-md);
    max-width: 800px;
  }
}

@media (max-width: 768px) {
  .restaurant-cards {
    grid-template-columns: 1fr;
    max-width: 400px;
    margin: 0 auto;
  }
  
  .card-content {
    padding: var(--space-md);
  }
  
  .card-icon {
    font-size: 2rem;
  }
  
  .card-content h3 {
    font-size: 1.2rem;
  }
}

@media (max-width: 576px) {
  .restaurant-cards {
    gap: var(--space-sm);
  }
  
  .card-content {
    padding: var(--space-sm);
  }
  
  .card-features {
    gap: 0.25rem;
  }
  
  .feature {
    font-size: 0.8rem;
    padding: 0.2rem 0.5rem;
  }
}
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const restaurantCards = document.querySelectorAll('.restaurant-card');
    
    restaurantCards.forEach(card => {
      card.addEventListener('click', () => {
        // Remover clase activa de todas las cards
        restaurantCards.forEach(c => c.classList.remove('active'));
        // Agregar clase activa a la card clickeada
        card.classList.add('active');
      });
    });
  });
</script>