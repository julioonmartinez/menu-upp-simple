<style>
/* Estilos minimalistas para la secci√≥n Hero */
.hero-section {
  position: relative;
  min-height: 100vh;
  padding: 0;
  overflow: hidden;
  background-color: var(--bg-primary);
  display: flex;
  align-items: center;
  padding-top: 120px; /* Espacio para el header fijo */
}

/* Fondo con gradiente sutil */
.hero-background {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 0;
}

.hero-gradient {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: radial-gradient(circle at 30% 20%, rgba(255, 107, 53, 0.03) 0%, transparent 50%),
              radial-gradient(circle at 70% 80%, rgba(255, 140, 105, 0.02) 0%, transparent 50%);
}

.hero-container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 var(--spacing-lg);
  display: grid;
  grid-template-columns: 1fr 1fr;
  align-items: center;
  gap: var(--spacing-4xl);
  position: relative;
  z-index: 1;
}

.hero-content {
  position: relative;
  z-index: 2;
}

/* Badge minimalista */
.hero-badge-wrapper {
  margin-bottom: var(--spacing-lg);
}

.hero-badge {
  display: inline-flex;
  align-items: center;
  background: rgba(255, 107, 53, 0.08);
  color: var(--primary-color);
  font-size: var(--font-sm);
  font-weight: 500;
  padding: var(--spacing-xs) var(--spacing-md);
  border-radius: var(--radius-full);
  border: 1px solid rgba(255, 107, 53, 0.15);
  letter-spacing: 0.5px;
}

.badge-text {
  font-size: var(--font-xs);
  text-transform: uppercase;
  letter-spacing: 1px;
}

/* T√≠tulo principal */
.hero-title {
  font-size: clamp(2.5rem, 5vw, 4rem);
  line-height: 1.1;
  margin-bottom: var(--spacing-lg);
  font-weight: 700;
  color: var(--text-primary);
}

.title-highlight {
  color: var(--primary-color);
  position: relative;
  display: inline-block;
}

.title-highlight::after {
  content: '';
  position: absolute;
  bottom: 0.1em;
  left: 0;
  width: 100%;
  height: 0.15em;
  background-color: rgba(255, 107, 53, 0.2);
  z-index: -1;
}

.title-subtitle {
  font-size: 0.9em;
  color: var(--text-secondary);
  font-weight: 500;
}

/* Descripci√≥n */
.hero-description {
  font-size: clamp(1.1rem, 1.5vw, 1.3rem);
  margin-bottom: var(--spacing-xl);
  color: var(--text-secondary);
  line-height: 1.6;
  max-width: 540px;
}

/* Features mejorados */
.hero-features {
  display: flex;
  flex-wrap: wrap;
  gap: var(--spacing-sm);
  margin-bottom: var(--spacing-xl);
}

.feature-chip {
  display: inline-flex;
  align-items: center;
  gap: var(--spacing-xs);
  padding: var(--spacing-xs) var(--spacing-sm);
  background: rgba(255, 107, 53, 0.05);
  border-radius: var(--radius-full);
  border: 1px solid rgba(255, 107, 53, 0.1);
  font-size: var(--font-xs);
  font-weight: 500;
  color: var(--text-primary);
  white-space: nowrap;
  transition: all var(--transition-normal);
  animation: chipFloat 3s ease-in-out infinite;
}

.feature-chip:nth-child(1) { animation-delay: 0s; }
.feature-chip:nth-child(2) { animation-delay: 0.5s; }
.feature-chip:nth-child(3) { animation-delay: 1s; }

.feature-chip:hover {
  background: rgba(255, 107, 53, 0.08);
  border-color: rgba(255, 107, 53, 0.2);
  transform: translateY(-2px);
  animation-play-state: paused;
}

@keyframes chipFloat {
  0%, 100% { 
    transform: translateY(0px); 
  }
  50% { 
    transform: translateY(-3px); 
  }
}

.chip-icon {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 16px;
  height: 16px;
  background: var(--primary-color);
  color: white;
  border-radius: 50%;
  font-size: 10px;
  font-weight: 600;
  flex-shrink: 0;
}

.chip-text {
  font-weight: 500;
  color: var(--text-primary);
  font-size: var(--font-xs);
  letter-spacing: 0.2px;
}

/* Botones */
.hero-buttons {
  display: flex;
  gap: var(--spacing-md);
  margin-bottom: var(--spacing-xl);
}

/* Nota de descuento */
.hero-note {
  display: flex;
  align-items: center;
  gap: var(--spacing-sm);
  padding: var(--spacing-md) var(--spacing-lg);
  background: rgba(255, 107, 53, 0.05);
  border-radius: var(--radius-lg);
  border: 1px solid rgba(255, 107, 53, 0.1);
  max-width: fit-content;
}

.note-icon {
  font-size: var(--font-lg);
}

.hero-note p {
  margin: 0;
  font-size: var(--font-sm);
  color: var(--text-primary);
  font-weight: 500;
}

/* Imagen */
.hero-image-wrapper {
  position: relative;
  z-index: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}

.image-container {
  position: relative;
  width: 100%;
  max-width: 550px;
}

.image-badge {
  position: absolute;
  top: 10%;
  left: -10%;
  background: white;
  padding: var(--spacing-sm) var(--spacing-lg);
  border-radius: var(--radius-lg);
  font-size: var(--font-sm);
  font-weight: 600;
  color: var(--primary-color);
  box-shadow: var(--shadow-md);
  display: flex;
  align-items: center;
  gap: var(--spacing-sm);
  z-index: 3;
  border: 1px solid rgba(0, 0, 0, 0.05);
}

.badge-dot {
  width: 6px;
  height: 6px;
  background: var(--primary-color);
  border-radius: 50%;
  opacity: 0.7;
}

.hero-image {
  width: 100%;
  height: auto;
  /* border-radius: var(--radius-xl); */
  /* box-shadow: var(--shadow-lg); */
  animation: heroFloat 6s ease-in-out infinite;
  position: relative;
  z-index: 2;
}

.image-shadow {
  position: absolute;
  bottom: -15px;
  left: 10%;
  right: 10%;
  height: 30px;
  background: radial-gradient(ellipse, rgba(0, 0, 0, 0.08) 0%, transparent 70%);
  border-radius: 50%;
  z-index: 1;
}

@keyframes heroFloat {
  0%, 100% { transform: translateY(0px); }
  50% { transform: translateY(-10px); }
}

/* Responsive */
@media (max-width: 992px) {
  .hero-container {
    grid-template-columns: 55% 45%;
    gap: var(--spacing-2xl);
  }
}

@media (max-width: 768px) {
  .hero-section {
    min-height: auto;
    padding: var(--spacing-4xl) 0;
    padding-top: 100px; /* Menos padding en m√≥vil */
  }
  
  .hero-container {
    grid-template-columns: 1fr;
    text-align: center;
    gap: var(--spacing-3xl);
  }
  
  .hero-features {
    max-width: 100%;
    margin-left: auto;
    margin-right: auto;
    justify-content: center;
    flex-wrap: wrap;
  }
  
  .hero-buttons {
    justify-content: center;
  }
  
  .hero-note {
    margin: 0 auto;
  }
  
  .image-container {
    max-width: 400px;
  }
  
  .image-badge {
    top: 5%;
    left: 0;
    transform: translateX(-20%);
  }
}

@media (max-width: 576px) {
  .hero-section {
    padding: var(--spacing-3xl) 0;
    padding-top: 80px; /* A√∫n menos padding en m√≥vil peque√±o */
  }
  
  .hero-container {
    padding: 0 var(--spacing-md);
  }
  
  .hero-title {
    font-size: 2rem;
  }
  
  .hero-description {
    font-size: 1rem;
  }
  
  .hero-features {
    justify-content: center;
    gap: var(--spacing-xs);
    flex-wrap: wrap;
  }
  
  .feature-chip {
    font-size: 11px;
    padding: var(--spacing-xs) var(--spacing-sm);
  }
  
  .hero-buttons {
    flex-direction: column;
    gap: var(--spacing-sm);
    width: 100%;
    max-width: 300px;
    margin-left: auto;
    margin-right: auto;
  }
  
  .image-container {
    max-width: 320px;
  }
  
  .image-badge {
    font-size: var(--font-xs);
    padding: var(--spacing-xs) var(--spacing-md);
  }
  
  .hero-image {
    animation: none;
  }
}

/* Optimizaciones de rendimiento */
@media (prefers-reduced-motion: reduce) {
  .hero-badge,
  .badge-dot,
  .hero-image,
  .feature-chip {
    animation: none;
  }
  
  .feature-chip:hover {
    transform: none;
  }
}
</style>

