<style>
/* Estilos modernos para la secci贸n de extras */
.extras {
  position: relative;
  overflow: hidden;
}

/* Fondo con patrones sutiles */
.extras::before {
  content: '';
  position: absolute;
  bottom: 0;
  right: 0;
  width: 40%;
  height: 80%;
  background: radial-gradient(circle, rgba(255, 107, 53, 0.03) 0%, transparent 70%);
  clip-path: polygon(20% 0, 100% 0, 100% 100%, 0% 100%);
  z-index: 0;
}

.container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 var(--spacing-lg);
  position: relative;
  z-index: 1;
}

/* Header de la secci贸n */
.section-header {
  text-align: center;
  margin-bottom: var(--spacing-5xl);
  max-width: 800px;
  margin-left: auto;
  margin-right: auto;
}

.header-badge {
  display: inline-flex;
  align-items: center;
  gap: var(--spacing-sm);
  background: linear-gradient(135deg, rgba(255, 107, 53, 0.1), rgba(255, 140, 105, 0.1));
  color: var(--primary-color);
  font-size: var(--font-sm);
  font-weight: 600;
  padding: var(--spacing-sm) var(--spacing-lg);
  border-radius: var(--radius-full);
  margin-bottom: var(--spacing-lg);
  border: 1px solid rgba(255, 107, 53, 0.2);
}

.badge-icon {
  font-size: var(--font-base);
}

.section-title {
  font-size: clamp(2rem, 4vw, 3rem);
  font-weight: 700;
  line-height: 1.2;
  margin-bottom: var(--spacing-lg);
  color: var(--text-primary);
}

.title-accent {
  background: linear-gradient(135deg, var(--primary-color), var(--primary-light));
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.section-description {
  font-size: clamp(1rem, 1.5vw, 1.2rem);
  color: var(--text-secondary);
  line-height: 1.6;
  max-width: 600px;
  margin: 0 auto;
}

/* Contenido principal */
.extras-content {
  display: flex;
  flex-wrap: wrap;
  gap: var(--spacing-4xl);
  align-items: center;
}

.extras-text {
  flex: 1;
  min-width: 300px;
}

.text-content {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-xl);
}

.text-content h3 {
  font-size: var(--font-3xl);
  font-weight: 700;
  color: var(--text-primary);
  margin: 0;
  line-height: 1.3;
}

.text-content > p {
  font-size: var(--font-lg);
  color: var(--text-secondary);
  line-height: 1.6;
  margin: 0;
}

/* Lista de caracter铆sticas */
.features-list {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-lg);
}

.feature-item {
  display: flex;
  gap: var(--spacing-md);
  padding: var(--spacing-md);
  background: white;
  border-radius: var(--radius-lg);
  border: 1px solid rgba(0, 0, 0, 0.05);
  transition: all var(--transition-normal);
}

.feature-item:hover {
  transform: translateX(8px);
  box-shadow: var(--shadow-md);
  border-color: rgba(255, 107, 53, 0.2);
}

.feature-icon {
  display: flex;
  align-items: center;
  justify-content: center;
  justify-self: center;
  align-self: center;
  width: 40px;
  height: 40px;
  background: linear-gradient(135deg, var(--primary-color), var(--primary-light));
  color: white;
  border-radius: var(--radius-md);
  flex-shrink: 0;
  box-shadow: 0 2px 8px rgba(255, 107, 53, 0.3);
}

.feature-text h4 {
  font-size: var(--font-lg);
  font-weight: 600;
  color: var(--text-primary);
  margin: 0 0 var(--spacing-xs) 0;
  line-height: 1.3;
}

.feature-text p {
  font-size: var(--font-base);
  color: var(--text-secondary);
  margin: 0;
  line-height: 1.5;
}

/* Nota de precios */
.pricing-note {
  display: flex;
  align-items: center;
  gap: var(--spacing-md);
  padding: var(--spacing-lg);
  background: linear-gradient(135deg, rgba(255, 107, 53, 0.05), rgba(255, 140, 105, 0.05));
  border-radius: var(--radius-lg);
  border: 1px solid rgba(255, 107, 53, 0.1);
}

.note-icon {
  font-size: var(--font-xl);
  flex-shrink: 0;
}

.note-content p {
  font-size: var(--font-base);
  font-weight: 600;
  color: var(--text-primary);
  margin: 0 0 var(--spacing-xs) 0;
}

.note-content span {
  font-size: var(--font-sm);
  color: var(--text-secondary);
}

.extras-action {
  margin-top: var(--spacing-md);
}

/* Imagen */
.extras-image {
  flex: 1;
  min-width: 300px;
  position: relative;
}

.image-container {
  position: relative;
  width: 100%;
  max-width: 500px;
  margin: 0 auto;
}

.extras-image img {
  width: 100%;
  height: auto;
  border-radius: var(--radius-xl);
  box-shadow: var(--shadow-xl);
  transition: transform var(--transition-normal);
  position: relative;
  z-index: 2;
}

.image-container:hover img {
  transform: scale(1.02);
}

.image-decoration {
  position: absolute;
  top: -20px;
  left: -20px;
  width: 60%;
  height: 60%;
  border: 3px solid var(--primary-color);
  border-radius: var(--radius-xl);
  opacity: 0.2;
  z-index: 1;
}

.image-badge {
  position: absolute;
  top: 20px;
  right: 20px;
  background: white;
  padding: var(--spacing-sm) var(--spacing-md);
  border-radius: var(--radius-lg);
  font-size: var(--font-sm);
  font-weight: 600;
  color: var(--primary-color);
  box-shadow: var(--shadow-lg);
  display: flex;
  align-items: center;
  gap: var(--spacing-xs);
  z-index: 3;
}

.badge-dot {
  width: 8px;
  height: 8px;
  background: var(--primary-color);
  border-radius: 50%;
  animation: dotPulse 2s ease-in-out infinite;
}

@keyframes dotPulse {
  0%, 100% { opacity: 1; }
  50% { opacity: 0.5; }
}

/* Responsive */
@media (max-width: 768px) {
  .extras-content {
    flex-direction: column;
    gap: var(--spacing-3xl);
   
  }
  
  .extras-text, .extras-image {
    width: 100%;
  }
  
  .text-content h3 {
    font-size: var(--font-2xl);
  }
  
  .text-content > p {
    font-size: var(--font-base);
  }
  
  .feature-item {
    padding: var(--spacing-sm);
    justify-self: center;
  }
  
  .feature-icon {
    width: 35px;
    height: 35px;
  }
  
  .feature-text h4 {
    font-size: var(--font-base);
  }
  
  .feature-text p {
    font-size: var(--font-sm);
  }
  
  .image-decoration {
    display: none;
  }
  
  .image-badge {
    top: 10px;
    right: 10px;
    font-size: var(--font-xs);
    padding: var(--spacing-xs) var(--spacing-sm);
  }
}

@media (max-width: 576px) {
  .container {
    padding: 0 var(--spacing-md);
  }
  
  .section-header {
    margin-bottom: var(--spacing-4xl);
  }
  
  .text-content {
    gap: var(--spacing-lg);
  }
  
  .features-list {
    gap: var(--spacing-md);
  }
  
  .feature-item {
    flex-direction: column;
    gap: var(--spacing-sm);
    text-align: center;
  }
  
  .feature-item:hover {
    transform: translateY(-4px);
  }
  
  .pricing-note {
    flex-direction: column;
    text-align: center;
    gap: var(--spacing-sm);
  }
  
  .extras-action {
    text-align: center;
  }
}

/* Animaciones */
.extras-content {
  opacity: 0;
  transform: translateY(20px);
  animation: extrasFadeIn 0.8s ease forwards;
  animation-delay: 0.2s;
}

@keyframes extrasFadeIn {
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* Optimizaciones de rendimiento */
@media (prefers-reduced-motion: reduce) {
  .extras-content {
    animation: none;
    opacity: 1;
    transform: none;
  }
  
  .feature-item:hover {
    transform: none;
  }
  
  .image-container:hover img {
    transform: none;
  }
  
  .badge-dot {
    animation: none;
  }
}
</style>