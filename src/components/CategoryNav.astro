  }

  .category-list {
    display: flex;
    gap: 1.5rem;
    white-space: nowrap;
    padding: 0 0.5rem;
    position: relative;
    list-style: none;
    margin: 0;
    overflow-x: auto;
    scrollbar-width: none;
    -ms-overflow-style: none;
  }

  .category-list::-webkit-scrollbar {
    display: none;
  }

  .category-item {
    flex-shrink: 0;
  }

  .category-button {
    font-size: 1.125rem;
    font-weight: 500;
    padding: 0.25rem 0;
    transition: all 0.3s ease;
    cursor: pointer;
    position: relative;
    background: none;
    border: none;
    color: #6b7280;
    outline: none;
    text-transform: capitalize;
    /* min-height: 36px; */
  }

  .category-button:hover {
    color: var(--primary-color);
    transform: translateY(-1px);
  }

