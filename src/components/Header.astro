---
import type { LinkTree } from '../interfaces';
import type { Restaurant } from '../interfaces/restaurant';
interface Props  {
  restaurant: Restaurant
  linkTree: LinkTree
  showMenu?: boolean
}
const { restaurant, linkTree, showMenu = false } = Astro.props;

const primaryColor = restaurant.primaryColor || '#1a202c';
const secondaryColor = restaurant.secondaryColor || '#e6ddd4';
const backgroundColor = linkTree.backgroundColor || '#ffffff';

// Función para determinar si un color es claro u oscuro
const isLightColor = (color: string) => {
  const hex = color.replace('#', '');
  const r = parseInt(hex.substr(0, 2), 16);
  const g = parseInt(hex.substr(2, 2), 16);
  const b = parseInt(hex.substr(4, 2), 16);
  const brightness = ((r * 299) + (g * 587) + (b * 114)) / 1000;
  return brightness > 155;
};

// Garantiza contraste AA/AAA: blanco o negro
const getContrastText = (bg: string) => isLightColor(bg) ? '#111111' : '#ffffff';
const textColor = getContrastText(primaryColor);

const hasLogoImage = restaurant?.logo && restaurant.logo_data?.url !== '';
const getInitials = (name: string) => {
  if (!name) return '';
  const words = name.trim().split(' ');
  if (words.length === 1) return words[0].slice(0, 2).toUpperCase();
  return (words[0][0] + words[1][0]).toUpperCase();
};
const MAX_NAME_LENGTH = 18;
---

<header class="restaurant-header" style={`background: ${primaryColor};`}>
  <div class="header-overlay"></div>
  <div class="header-content">
    <div class="logo-circle">
      {hasLogoImage ? (
        <img src={restaurant.logo_data?.url} alt={restaurant.name} class="logo-img" />
      ) : (
        <span class="logo-initials"><i class="fa-solid fa-utensils"></i></span>
      )}
    </div>
    <div class="restaurant-info">
      <h1 class="restaurant-name" style={`color: ${textColor}`}>{restaurant.name && restaurant.name.length <= MAX_NAME_LENGTH ? restaurant.name : getInitials(restaurant?.name || '')}</h1>
      <span class="restaurant-subtitle" style={`color: ${textColor}`}>Menú Digital</span>
    </div>
    <button data-open-modal class="qr-btn" aria-label="Ver QR">
      <i class="fa-solid fa-qrcode"></i>
      <span>QR</span>
    </button>
    {showMenu && (
      <button data-open-modal class="menu-btn" aria-label="Abrir menú">
        <i class="fa-solid fa-bars"></i>
      </button>
    )}
  </div>
</header>

<style>
.restaurant-header {
  position: sticky;
  top: 0;
  width: 100%;
  z-index: 100;
  min-height: 64px;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2px 8px 0 rgba(0,0,0,0.04);
  overflow: hidden;
}
.header-overlay {
  position: absolute;
  inset: 0;
  background: rgba(255,255,255,0.15);
  backdrop-filter: blur(8px);
  z-index: 1;
}
.header-content {
  position: relative;
  z-index: 2;
  width: 100%;
  max-width: 1200px;
  margin: 0 auto;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0.5rem 1rem;
  gap: 0.5rem;
}
.logo-circle {
  width: 44px;
  height: 44px;
  min-width: 44px;
  min-height: 44px;
  border-radius: 50%;
  background: rgba(255,255,255,0.85);
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2px 8px 0 rgba(0,0,0,0.08);
  overflow: hidden;
}
.logo-img {
  width: 38px;
  height: 38px;
  object-fit: contain;
  border-radius: 50%;
}
.logo-initials {
  font-size: 1.3rem;
  color: var(--primary-color, #1a202c);
  display: flex;
  align-items: center;
  justify-content: center;
}
.restaurant-info {
  flex: 1 1 auto;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: center;
  min-width: 0;
  margin-left: 0.5rem;
}
.restaurant-name {
  font-size: clamp(1.1rem, 4vw, 1.3rem);
  font-weight: 700;
  margin: 0;
  line-height: 1.1;
  letter-spacing: -0.01em;
  max-width: 180px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.restaurant-subtitle {
  font-size: 0.7rem;
  font-weight: 500;
  text-transform: uppercase;
  letter-spacing: 0.05em;
  opacity: 0.85;
  margin-top: 0.1rem;
}
.qr-btn {
  display: flex;
  /* flex-direction: column; */
  align-items: center;
  justify-content: center;
  gap: 1rem;
  background: rgba(255,255,255,0.85);
  color: var(--primary-color, #1a202c);
  border: none;
  border-radius: 12px;
  padding: 0.4rem 0.7rem;
  font-size: 1.1rem;
  font-weight: 600;
  box-shadow: 0 2px 8px 0 rgba(0,0,0,0.08);
  cursor: pointer;
  transition: background 0.2s, box-shadow 0.2s, transform 0.1s;
}
.qr-btn:hover, .qr-btn:focus {
  background: rgba(255,255,255,1);
  box-shadow: 0 4px 16px 0 rgba(0,0,0,0.10);
  transform: translateY(-2px) scale(1.04);
}
.qr-btn span {
  font-size: 0.7rem;
  font-weight: 500;
  margin-top: 0.1rem;
}
.menu-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255,255,255,0.85);
  color: var(--primary-color, #1a202c);
  border: none;
  border-radius: 12px;
  padding: 0.4rem 0.7rem;
  font-size: 1.2rem;
  margin-left: 0.3rem;
  box-shadow: 0 2px 8px 0 rgba(0,0,0,0.08);
  cursor: pointer;
  transition: background 0.2s, box-shadow 0.2s, transform 0.1s;
}
.menu-btn:hover, .menu-btn:focus {
  background: rgba(255,255,255,1);
  box-shadow: 0 4px 16px 0 rgba(0,0,0,0.10);
  transform: translateY(-2px) scale(1.04);
}
@media (max-width: 600px) {
  .header-content {
    max-width: 100vw;
    padding: 0.5rem 0.5rem;
    gap: 0.3rem;
  }
  .restaurant-name {
    font-size: clamp(1rem, 5vw, 1.1rem);
    max-width: 120px;
  }
  .logo-circle {
    width: 38px;
    height: 38px;
    min-width: 38px;
    min-height: 38px;
  }
  .logo-img {
    width: 32px;
    height: 32px;
  }
}
</style>