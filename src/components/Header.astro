import type { LinkTree } from '../interfaces';
import type { Restaurant } from '../interfaces/restaurant';
interface Props  {
  restaurant: Restaurant
  linkTree: LinkTree
}
const{restaurant , linkTree } = Astro.props;

// Colores por defecto si no están definidos
const primaryColor = restaurant.primaryColor || '#1a202c';
const secondaryColor = restaurant.secondaryColor || '#e6ddd4';
const backgroundColor = linkTree.backgroundColor || '#ffffff';

// Función para determinar si un color es claro u oscuro
const isLightColor = (color: string) => {
  console.log('color', color)
  const hex = color.replace('#', '');
  const r = parseInt(hex.substr(0, 2), 16);
  const g = parseInt(hex.substr(2, 2), 16);
  const b = parseInt(hex.substr(4, 2), 16);
  const brightness = ((r * 299) + (g * 587) + (b * 114)) / 1000;
  return brightness > 155;
};

const getSmartContrastColor = (backgroundColor: string): string => {
  const hex = backgroundColor.replace('#', '');
  const r = parseInt(hex.substr(0, 2), 16);
  const g = parseInt(hex.substr(2, 2), 16);
  const b = parseInt(hex.substr(4, 2), 16);
  
  if (isLightColor(backgroundColor)) {
    // Para colores claros, genera un color oscuro
    const darkR = Math.max(0, Math.floor(r * 0.2));
    const darkG = Math.max(0, Math.floor(g * 0.2));
    const darkB = Math.max(0, Math.floor(b * 0.2));
    return `#${darkR.toString(16).padStart(2, '0')}${darkG.toString(16).padStart(2, '0')}${darkB.toString(16).padStart(2, '0')}`;
  } else {
    // Para colores oscuros, genera un color claro
    const lightR = Math.min(255, Math.floor(r + (255 - r) * 0.8));
    const lightG = Math.min(255, Math.floor(g + (255 - g) * 0.8));
    const lightB = Math.min(255, Math.floor(b + (255 - b) * 0.8));
    return `#${lightR.toString(16).padStart(2, '0')}${lightG.toString(16).padStart(2, '0')}${lightB.toString(16).padStart(2, '0')}`;
  }
};

// ✅ CORRECCIÓN: Asigna directamente el resultado de la función
const textColor = getSmartContrastColor(backgroundColor);

